/**
 * mail alert for Alexa.
 */
function itg_alexa_audio_mail_cron() {
  $curent_feed = get_last_alexa_feed();
  $dateFromDatabase = $curent_feed[0]['created'];
  
  $dateSixHoursAgo = strtotime('-1 hours');
  if ($dateSixHoursAgo >= $dateFromDatabase) {
    // more than 6 hours ago
    $mail_content = 'Audio not uploaded from 1 hours for Alexa.';
    
    $mail_subject = 'Mail alter for alexa';
    $params = array(
        'body' => $mail_content,
        'subject' => $mail_subject,
      );
      $to = 'arunmishra.coder@gmail.com, arun.kumarmishra@aajtak.com';

      $mail = drupal_mail('itg_alexa_audio', 'send_mail_to_admin', $to, language_default(), $params, 'no-reply@indiatoday.com', TRUE);
      if ($mail['result']) {
        print 'send email to user.';
      }
      else {
        print 'Failed to send the email!';
      }   
  }    
}


