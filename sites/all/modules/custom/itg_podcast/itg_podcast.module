/**
 * Implements hook_node_presave()
 * {@inheritdoc}
 */
function itg_podcast_node_presave($node) {
  module_load_include('php', 'itg_podcast', 'includes/getid3/getid3');
  
  // Set audio length.
  if ($node->type == "podcast") {
    foreach ($node->field_podcast_audio_upload['und'] as $audio_key => $audio_files_data) {
      $fid = $audio_files_data['field_podcast_upload_audio_file']['und'][0]['fid'];
      $file_data = file_load($fid);
      $file_url = drupal_realpath($file_data->uri);
      $getID3 = new getID3;
      //$head = array_change_key_case(get_headers($file_url, TRUE));
      $meta = $getID3->analyze($file_url);
      $duration = $meta['playtime_string'];
      // Handel field collection.
      $node->field_podcast_audio_upload['und'][$audio_key]['field_podcast_audio_length']['und'][0]['value'] = $duration;
      $node->field_podcast_audio_upload['und'][$audio_key]['field_podcast_audio_length']['und'][0]['value']['#default_value'] = $duration;
      $node->field_podcast_audio_upload['und'][$audio_key]['field_podcast_audio_length']['und'][0]['value']['#value'] = $duration;
      $node->field_podcast_audio_upload['und'][$audio_key]['entity']->field_podcast_audio_length['und'][0]['value'] = $duration;
      $node->field_podcast_audio_upload['und'][$audio_key]['entity']->field_podcast_audio_length['und'][0]['value']['#default_value'] = $duration;
    }
  }
}



