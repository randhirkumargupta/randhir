/**
 * Implements function check exist filename
 * @param string $filename
 * @return string
 */
function itg_audio_check_exist_file($filename) {
  $query = db_select('file_managed', 'fm');
  $query->condition('filename', $filename, '=');
  $query->fields('fm');
  $query->orderBy('fm.fid', 'DESC');
  $query->range(0, 1);
  $results = $query->execute()->fetchAll();

  if (!isset($results[0])) {
    $res = 'public://dailymotion_audio_dir/' . $filename;
    return $res;
  }
  else {
    $result = explode('public://dailymotion_audio_dir/', $results[0]->uri);
    $path_info = pathinfo($results[0]->filename);
    $extension = $path_info['extension'];
    $file_name = $path_info['filename'];
    $result_num = explode($file_name . '_', $result[1]);

    $num_file_id = explode('.' . $extension, $result_num[1]);
    if (is_numeric($num_file_id[0]) && isset($num_file_id[0])) {
      $value = $num_file_id[0] + 1;
      $value = '_' . $value;
    }
    else {
      $value = '_0';
    }
    $file_info = pathinfo($filename);
    $result = 'public://dailymotion_audio_dir/' . $file_info['filename'] . $value . '.' . $extension;
    return $result;
  }
}

/**
 * Implements custom submit for move audio on dailymotion.
 * @param array $form
 * @param array $form_state
 */
function itg_podcast_custom_submit($form, &$form_state) {
  foreach ($form_state['values']['field_story_itg_tags'][LANGUAGE_NONE] as $tags) {
    $tag[] = $tags['name'];
  }
  $tag_value = implode(', ', $tag);
  $tags_value = trim($tag_value, ", ");
  $node_id = $form_state['values']['nid'];
  foreach ($form_state['values']['field_dailymotion_playlist'][LANGUAGE_NONE] as $playlist_term) {
    $playlist_name[] = $playlist_term['name'];
  }
  foreach ($form_state['values']['field_podcast_audio_upload'][LANGUAGE_NONE] as $key => $fieldcollection) {
    if (is_numeric($key)) {
      $fid = $form_state['values']['field_podcast_audio_upload'][LANGUAGE_NONE][$key]['field_podcast_upload_audio_file'][LANGUAGE_NONE][0]['fid'];
      if ($fid != '' && is_numeric($fid)) {
        $query = db_select('dailymotion_response_details', 'drd');
        $query->fields('drd', array('fid', 'video_id'));
        $query->condition('fid', $fid, '=');
        $result_fid = $query->execute()->fetchAssoc();
        if ($result_fid == '') {
          $new_fid_array[$key] = $fid;
        }
        else {
          // perform edit operation when node edit
          $result_video_fid .= $result_fid['video_id'] . ', ';
          //$playlist_response = itg_podcast_edit_dailymotion($result_fid, $playlist_name, $tags_value, $node_id);
          itg_podcast_unlink_video_playlist($result_fid, $playlist_name, $tags_value);
        }
      }
    }
  }
  if ($result_video_fid != '') {
    $final_exist_video = trim($result_video_fid, ", ");
    itg_podcast_edit_dailymotion($final_exist_video, $playlist_name, $node_id);
  }

  foreach ($new_fid_array as $key => $value) {
    if (is_numeric($key)) {
      $file_details = file_load($value);
      $real_path = drupal_realpath($file_details->uri);
      $response = itg_podcast_dailymotion($real_path, $key, $file_details->uri, $value, $tags_value);
      $response_result['video_id'] = $response['id'];
      $response_result['fid'] = $response['fid'];
      db_insert('dailymotion_response_details')
          ->fields(array(
            'title' => $response['title'],
            'channel' => $response['channel'],
            'fid' => $response['fid'],
            'tags' => $response['tags'],
            'video_id' => $response['id'],
          ))
          ->execute();
      itg_podcast_unlink_video_playlist($response_result, $playlist_name, $tags_value);
      $playlist_response = itg_podcast_edit_dailymotion($response_result, $playlist_name, $node_id);
    }
  }
}

/**
 * Implements function for dailymotion api
 * @return object
 */
function itg_podcast_dailymotion_api() {
  require_once 'includes/Dailymotion.php';
  $user_name = variable_get('dailymotion_username', '');
  $password = variable_get('dailymotion_password', '');
  $api_key = variable_get('dailymotion_apikey', '');
  $api_secret = variable_get('dailymotion_secretkey', '');

  // Tell the SDK what kind of authentication you'd like to use.
  // Because the SDK works with lazy authentication, no request is performed at this point.
  try {
    $api = new Dailymotion();
    $scopes = array(
      'userinfo',
      'feed',
      'manage_videos',
      'manage_subtitles',
      'read',
      'write',
      'delete',
    );
    $api->setGrantType(
        Dailymotion::GRANT_TYPE_PASSWORD, $api_key, $api_secret, $scopes, array(
      'username' => $user_name,
      'password' => $password,
        )
    );
  }
  catch (Exception $e) {
    if ($e->getMessage() == "Missing API key") {
      if (isset($_GET['destination'])) {
        unset($_GET['destination']);
      }
      drupal_set_message(t('Please enter API Key.'), 'error');
      drupal_goto('dailymotion/config');
    }
    else {
      drupal_set_message($e->getMessage(), 'error');
    }
  }
  return $api;
}

/**
 * Implements function for remove video from playlist
 */
function itg_podcast_unlink_video_playlist($vid_res_result, $playlist_name, $tags_value) {
  $video_id = $vid_res_result['video_id'];
  $api = itg_podcast_dailymotion_api();
  // Tags assign to node
  $api->post('/video/' . $video_id . '?tags=' . $tags_value);
  $old_playlist = array_diff($_SESSION['old_playlist_audio'], $playlist_name);
  // Delete playlist with video
  if (isset($old_playlist)) {
    foreach ($old_playlist as $old_play) {
      $del_play_id = itg_videogallery_get_playlist_id($old_play);
      if ($del_play_id[0]->pid != '') {
        $api->delete('/playlist/' . $del_play_id[0]->pid . '/videos/' . $video_id);
      }
    }
  }
}

/**
 * Implements dailymotion video edit function
 * @param array $vid_res_result
 * @param array $playlist_name
 * @param array $tags_value
 * @param int $node_id
 */
function itg_podcast_edit_dailymotion($vid_res_result, $playlist_name, $node_id) {
  if (is_array($vid_res_result)) {
    $video_id = $vid_res_result['video_id'];
    $fid = $vid_res_result['fid'];
  }
  else {
    $video_id = $vid_res_result;
  }
  $api = itg_podcast_dailymotion_api();
  // create playlist
  foreach ($playlist_name as $name) {
    // local saved playlist check
    $exist_playlist = itg_videogallery_get_playlist_id($name);
    if ($exist_playlist[0]->pid == '') {
      try {
        $result = $api->post(
            '/me/playlists', array(
          'name' => $name,
            )
        );
        // Insert data in dailymotion_playlist_details table
        $query = db_insert('dailymotion_playlist_details')
            ->fields(array(
          'pid' => $result['id'],
          'playlist_name' => $result['name'],
          'node_id' => $node_id,
          'video_id' => $video_id,
        ));
        $query->execute();
        if (is_array($vid_res_result)) {
          $api->post('/playlist/' . $result["id"] . '/videos/' . $video_id);
        }
        else {
          $api->post('/playlist/' . $result["id"] . '/videos?ids=' . $video_id);
        }
      }
      catch (Exception $e) {
        if ($e->getCode() == 500) {
          $playlist_id = itg_videogallery_get_playlist_id($name);
          $api->post('/playlist/' . $playlist_id[0]->pid . '/videos/' . $video_id);
          if (is_array($vid_res_result)) {
            $api->post('/playlist/' . $playlist_id[0]->pid . '/videos/' . $video_id);
          }
          else {
            $api->post('/playlist/' . $playlist_id[0]->pid . '/videos?ids=' . $video_id);
          }
        }
      }
    }
    else {
      $playlist_id = itg_videogallery_get_playlist_id($name);
      if (is_array($vid_res_result)) {
        $api->post('/playlist/' . $playlist_id[0]->pid . '/videos/' . $video_id);
      }
      else {
        $api->post('/playlist/' . $playlist_id[0]->pid . '/videos?ids=' . $video_id);
      }
    }
  }
}

/**
 * Implement dailymotion api call
 * @param string $real_path
 * @param int $key
 * @param string $uri
 * @param int $fid
 * @return array
 */
function itg_podcast_dailymotion($real_path, $key, $uri, $fid, $tags_value) {
  $api = itg_podcast_dailymotion_api();

  $filePath = $real_path;
  // Temporarily upload a file on Dailymotion' servers
  // This does not create a video, it only offers you a public URL to work with.
  try {
    $url = $api->uploadFile($filePath);
    $result = $api->post(
        '/me/videos', array(
      'url' => $url,
      'title' => $uri,
      'tags' => $tags_value,
      'channel' => 'news',
      'published' => TRUE,
        )
    );
    $a = new Dailymotion();
    $a->logout();
    $result['fid'] = $fid;
    $result['tags'] = $tags_value;
  }
  catch (Exception $e) {
    if ($e->getMessage() == "This `client_id' doesn't exist.") {
      if (isset($_GET['destination'])) {
        unset($_GET['destination']);
      }
      drupal_set_message('API Key is wrong.', 'error');
      drupal_goto('dailymotion/config');
    }
    elseif ($e->getMessage() == "Invalid `client_secret'") {
      if (isset($_GET['destination'])) {
        unset($_GET['destination']);
      }
      drupal_set_message('Secret Key is wrong.', 'error');
      drupal_goto('dailymotion/config');
    }
    elseif ($e->getCode() == 6) {
      drupal_set_message('There is some issue with internet connection.', 'error');
      drupal_goto();
    }
    else {
      drupal_set_message($e->getMessage() . $e->getCode(), 'error');
    }
  }
  return $result;
}

