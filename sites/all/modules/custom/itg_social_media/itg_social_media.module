  // Insert fields value into database.
  field_sql_storage_field_storage_write('node', $node, 'update', $fields);
  
  // Clear field cache
  cache_clear_all("field:node:$node->nid", 'cache_field');  
}

/**
 * Implements hook_block_info()
 */
function itg_social_media_block_info() {
  $block = array();
  $block['social_media_form'] = array(
    'info' => t('Social Media Integration'),
    'cache' => DRUPAL_CACHE_GLOBAL,
  );
  
  return $block;
}

/**
 * Implements hook_block_view()
 * @param type $delta
 */
function itg_social_media_block_view($delta = '') {
  $block = array();
  
  switch ($delta) {
    case 'social_media_form':
      $block = array(
        'subject' => t('Social media Integration'),
        'content' => drupal_get_form('itg_social_media_form'),
      );
      
      break;
  }
  
  return $block;
}