  $query->fields('drd', array('solr_video_id'));
  $query->isNotNull('nid')->condition('content_type', 'video_gallery', '=');
  $video_data = $query->execute()->fetchAll();
  foreach ($video_data as $vid_data) {
    $all_video_id[] = $vid_data->solr_video_id;
  }
  return $all_video_id;
}
