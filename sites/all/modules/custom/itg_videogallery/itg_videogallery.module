                      ))
                      ->condition('video_id', $file_video[0]->solr_video_id, '=')
                      ->execute();
// update nid in video
              $num_updated = db_update('itg_solr_video_info') // Table name no longer needs {}
                      ->fields(array(
                          'nid' => $node_id,
                      ))
                      ->condition('fid', $fids, '=')
                      ->execute();
            }
          }
        }
        if ($node->field_story_facebook_video[LANGUAGE_NONE][0]['fid'] != 0) {
          itg_videogallery_update_node_id_for_video_fid($node_id, $node->field_story_facebook_video[LANGUAGE_NONE][0]['fid']);
