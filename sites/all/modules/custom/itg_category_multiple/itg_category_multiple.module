/**
 * Returns all term with its depth level
 * @param int $tid
 */
function itg_category_multiple_get_term_level($tid) {
  static $depths = array();

  if (!isset($depths[$tid])) {
    $parent = db_select('taxonomy_term_hierarchy', 'th')
                    ->fields('th', array('parent'))
                    ->condition('tid', $tid)
                    ->execute()->fetchField();

    if ($parent == 0) {
      $depths[$tid] = 1;
    }
    else {
      $depths[$tid] = 1 + itg_category_multiple_get_term_level($parent);
    }
  }

  return $depths[$tid];
}

