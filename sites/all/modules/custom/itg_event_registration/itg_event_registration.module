/**
 * Implement function for past speaker events nids
 */
function itg_event_backend_past_speaker_event_id($event_type_tid, $even_nid) {
  $query = db_select('field_data_field_event_types', 'fdfe');
  $query->fields('fdfe', array('entity_id'));
  $query->join('node', 'n', 'n.nid = fdfe.entity_id');
  $query->leftJoin('field_data_field_event_start_date' , 'esd' , 'esd.entity_id=n.nid');
  $query->condition('fdfe.bundle', 'event_backend', '=');
  $query->condition('fdfe.field_event_types_tid', $event_type_tid, '=');
  $query->condition('n.nid', $even_nid, '!=');
  $query->condition('esd.field_event_start_date_value', date('Y-m-d h:m:s') , '<=');
  $query->condition('n.status', 1, '=');
  $result = $query->execute();
  foreach ($result as $rel) {
    $event_ids[] = $rel->entity_id;
  }
  $even_ids = implode(',', $event_ids);
  return $even_ids;
}

