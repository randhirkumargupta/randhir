/**
 * Implementation of hook_form_alter
 * {@inheritdoc}
 */
function itg_event_registration_form_alter(&$form, &$form_state, $form_id) {
  global $user;
  if ($form_id == 'event_registration_node_form') {
    if ($user->uid) {
      $user_load = user_load($user->uid);
      $user_name = $user_load->field_first_name['und'][0]['value'] . ' ' . $user_load->field_last_name['und'][0]['value'];
      $mobile_number = $user_load->field_mobile_number['und'][0]['value'];
      $email = $user_load->mail;
      $form['field_erf_registration_fee']['und'][0]['field_erf_name']['und'][0]['value']['#default_value'] = $user_name;
      $form['field_erf_registration_fee']['und'][0]['field_erf_name']['und'][0]['value']['#value'] = $user_name;
      $form['field_erf_registration_fee']['und'][0]['field_erf_mobile']['und'][0]['value']['#default_value'] = $mobile_number;
      $form['field_erf_registration_fee']['und'][0]['field_erf_mobile']['und'][0]['value']['#value'] = $mobile_number;
      $form['field_erf_registration_fee']['und'][0]['field_erf_email']['und'][0]['value']['#default_value'] = $email;
      $form['field_erf_registration_fee']['und'][0]['field_erf_email']['und'][0]['value']['#value'] = $email;
    }
    $current_event_nid_old = itg_event_registration_get_event_nid();

    if (!empty($current_event_nid_old)) {
      $_SESSION['current_event_id'] = $current_event_nid_old;
    }
    $current_event_nid = $_SESSION['current_event_id'];
    $max_delta = $form['field_erf_registration_fee'][LANGUAGE_NONE]['#max_delta'] + 1;
    $node = node_load($current_event_nid);
    $no_of_tickets = $node->field_no_of_tickets[LANGUAGE_NONE][0]['value'];

    $total_registered_users = itg_event_registration_get_total_registration($current_event_nid);
    $tickets_available = $no_of_tickets - $total_registered_users;
    $group_tickets_available = $tickets_available;
    if ($group_tickets_available > 0) {
      $_SESSION['total_ava_ticket'] = $group_tickets_available;
    }

    if ($tickets_available == 0) {
      drupal_add_js('jQuery(document).ready(function() {                  
          jQuery("#field-erf-registration-fee-values").hide();
          jQuery("#edit-field-erf-type").append("<p><strong>No more tickets available for this event.</strong></p>");
          jQuery("p").css("padding-left", "200px");
     });', array('type' => 'inline', 'scope' => 'footer'));

      unset($form['field_erf_registration_fee']['und']['add_more']);
    }

    //Hide add more button, if ticket are not available
    if (isset($max_delta) && $max_delta >= $_SESSION['total_ava_ticket']) {
      unset($form['field_erf_registration_fee']['und']['add_more']);
    }

    // Hide none option from ticket type
    for ($member = 0; $member < $max_delta; $member++) {
      unset($form['field_erf_registration_fee']['und'][$member]['field_erf_ticket_type']['und']['#options']['_none']);
    }

    // Hide metatags and priview button
    unset($form['title']);
    unset($form['#metatags']);
    unset($form['actions']['preview']);
    $form['field_erf_total_fee']['#access'] = FALSE;

    // Rename submit button from "Save" to "Submit"
    $form['actions']['submit']['#value'] = 'Submit';

    if (isset($current_event_nid)) {
      $event_node = node_load($current_event_nid);
      $registration_type = $event_node->field_event_type[LANGUAGE_NONE][0]['value'];

      if ($registration_type == 'free' || $registration_type == 'invite') {
        unset($form['field_erf_total_fee']);
        $form['field_erf_payment_gateway']['#access'] = FALSE;
        $form['add_form_scroll_container'] = array(
          '#prefix' => '<div class= "form-field-name-field-erf-payment-gateway">',
          '#type' => 'item',
          '#suffix' => '</div>',
          '#weight' => 9
        );
      }
      else {
        $form['total_fees_container'] = array(
          '#prefix' => '<div class= "event-total-fees-container">',
          '#title' => 'Total Fees',
          '#type' => 'item',
          '#markup' => '<span class="event-total-fees-text"><span class="event-fees-amount">Rs 00</span> for <span class="event-number-of-members">1</span> Members',
          '#suffix' => '</div>',
          '#weight' => 10
        );

        $form['total_value'] = array(
          '#type' => 'hidden',
          '#weight' => 11,
          '#attributes' => array(
            'class' => array(
              'total_value'
            ),
          ),
        );
        $form['discounted_value'] = array(
          '#type' => 'hidden',
          '#weight' => 11
        );

        $form['coupon_code'] = array(
          '#suffix' => '<div class="coupon_code_message"></div>',
          '#title' => 'Coupon Code',
          '#type' => 'textfield',
          '#weight' => 11
        );

        $form['have_a_coupon_code'] = array(
          '#prefix' => '<div class= "have-a-coupon-code">',
          '#type' => 'item',
          '#markup' => '<span class="event-number-of-members">Have a Coupon Code?</span> <a class="have-a-coupon-code-link" href="javascript:">Apply</a>&nbsp;<a class="event-coupon-reset" href="javascript:void(0);">Reset</a>',
          '#suffix' => '</div>',
          '#weight' => 12
        );
        $form['total_value']['#weight'] = 10;
        $form['field_erf_payment_gateway']['#weight'] = 11;
        $form['coupon_code']['#weight'] = 12;
      }
      if (isset($event_node->field_story_expert_description[LANGUAGE_NONE]) && !empty($event_node->field_story_expert_description[LANGUAGE_NONE][0]['value'])) {
        $form['term_condition'] = array(
          '#type' => 'checkbox',
          '#weight' => 14,
          '#required' => TRUE,
          '#title' => t('Terms and Conditions: '),
        );

        $form['cutomtext'] = array(
          '#type' => 'item',
          '#markup' => '<div class="tc-txt">' . $event_node->field_story_expert_description[LANGUAGE_NONE][0]['value'] . '</div>',
          '#weight' => 15,
        );
      }
    }

    // Assign event id into source id field
    $form['field_story_source_id'][LANGUAGE_NONE][0]['value']['#default_value'] = $current_event_nid;
    $form['field_story_source_id']['#access'] = TRUE;

    // After build and validate function 
    $form['#after_build'][] = 'itg_event_registration_form_after_build';

    // Call custom summit callback
    $form['#validate'][] = 'itg_event_registration_form_event_validate';
    $form['actions']['submit']['#submit'][] = 'itg_event_registration_form_custom_submit_callback';

    $fresh_event_data = itg_event_registration_fresh_event($_SESSION['current_event_id']);

    if (empty($fresh_event_data)) { // if fresh event not configure registration field.
      $vocab_id = itg_event_registration_vocab_id('event_registration_configuration');
      $query = db_select('taxonomy_term_data', 'ttd');
      $query->fields('ttd', array('name'));
      $query->condition('ttd.vid', $vocab_id, '=');
      $result = $query->execute();
      foreach ($result as $value) {
        $hide_field[] = $value->name;
      }
      foreach ($form['field_erf_registration_fee'][LANGUAGE_NONE] as $key => $field_collection_reg) {
        if (is_numeric($key)) {
          foreach ($hide_field as $field_key) {
            $form['field_erf_registration_fee'][LANGUAGE_NONE][$key][$field_key]['#access'] = FALSE;
          }
        }
      }
    }
    else {
      $data = itg_event_registration_config_field($_SESSION['current_event_id']);
      // event registration form field show and hide by configuration
      foreach ($form['field_erf_registration_fee'][LANGUAGE_NONE] as $key => $field_collection_reg) {
        if (is_numeric($key)) {
          foreach ($data['unset'] as $field_key) {

            $form['field_erf_registration_fee'][LANGUAGE_NONE][$key][$field_key]['#access'] = FALSE;
          }

          // *required fields
          foreach ($data['show'] as $field_keys) {
            if (strlen($field_keys['required']) > 1) {
              $f_keys = explode('@', $field_keys['required']);
//              if ($f_keys[0] == 'field_erf_ticket_type') {
//                $form['field_erf_registration_fee'][LANGUAGE_NONE][$key]['field_erf_ticket_type']['#attributes']['class'][] = 'ticket-type-require';
//              }
              if ($f_keys[0] == 'field_erf_date_of_birth') {
                $form['field_erf_registration_fee'][LANGUAGE_NONE][$key]['field_erf_date_of_birth']['#attributes']['class'][] = 'ticket-type-require';
              }
              if ($f_keys[0] == 'field_erf_city') {
                $form['field_erf_registration_fee'][LANGUAGE_NONE][$key]['field_erf_city']['#attributes']['class'][] = 'ticket-type-require';
              }
              if ($f_keys[0] == 'field_erf_state') {
                $form['field_erf_registration_fee'][LANGUAGE_NONE][$key]['field_erf_state']['#attributes']['class'][] = 'ticket-type-require';
              }
              if ($f_keys[0] == 'field_event_country') {
                $form['field_erf_registration_fee'][LANGUAGE_NONE][$key]['field_event_country']['#attributes']['class'][] = 'ticket-type-require';
              }
              $form['field_erf_registration_fee'][LANGUAGE_NONE][$key][$f_keys[0]][LANGUAGE_NONE][0]['value']['#title'] = $form['field_erf_registration_fee'][LANGUAGE_NONE][$key][$f_keys[0]][LANGUAGE_NONE][0]['value']['#title'] . '<span class="form-required">*</span>';
            }
          }
        }
      }
    }
    $form['field_preview_unique_id']['#attributes']['class'][] = 'hide';
    $event_registration_unique = _get_unique_id_for_registration_unique_field();
    $form['field_preview_unique_id'][LANGUAGE_NONE][0]['value']['#default_value'] = $event_registration_unique;
    $_REQUEST['destination'] = 'itg-payment-checkout';

    // Event registration form ticket types.
    foreach ($node->field_ticket_group_type[LANGUAGE_NONE] as $value) {
      $ticket_types[] = $value['value'];
    }
    $ticket_types = entity_load('field_collection_item', $ticket_types);
    if ($node->field_event_type[LANGUAGE_NONE][0]['value'] == 'paid') {
      if ($node->field_early_bird[LANGUAGE_NONE][0]['value'] != 'early_bird_offer') {
        $count = 1;
        foreach ($ticket_types as $types) {
          $participate = $types->field_participate_type[LANGUAGE_NONE][0]['tid'];
          $individual = $types->field_individual_registration_fe[LANGUAGE_NONE][0]['value'];
          $terms = taxonomy_term_load($participate);

          $group_5[$terms->tid] = '<span class="' . $individual . '-' . $terms->tid . ' reg_pric"  style="display:none"> 5 members ₹-' . $types->field_group_registration_fee_5[LANGUAGE_NONE][0]['value'] . '</span>';
          $group_10[$terms->tid] = '<span class="' . $individual . '-' . $terms->tid . ' reg_pric"  style="display:none"> 10 members ₹-' . $types->field_group_registration_fee_10[LANGUAGE_NONE][0]['value'] . '</span>';
          $group_5_cal[$terms->tid] = $types->field_group_registration_fee_5[LANGUAGE_NONE][0]['value'];
          $group_10_cal[$terms->tid] = $types->field_group_registration_fee_10[LANGUAGE_NONE][0]['value'];
          $single_group[$terms->tid] = $individual;
          //$option[$individual . '-' . $count] = $terms->name . ' <b>Rs ' . $individual . '</b>';
          $option[$individual . '-' . $terms->tid] = $terms->name . ' <b>Rs ' . $individual . '</b>';
          $count++;
        }
      }
      else {
        $count = 1;
        foreach ($ticket_types as $types) {
          $participate = $types->field_participate_type[LANGUAGE_NONE][0]['tid'];
          $individual = $types->field_early_bird_individual_regi[LANGUAGE_NONE][0]['value'];
          $terms = taxonomy_term_load($participate);
          $group_5[$terms->tid] = '<span class="' . $individual . '-' . $terms->tid . ' reg_pric"  style="display:none"> 5 members ₹-' . $types->field_early_bird_group_registrat[LANGUAGE_NONE][0]['value'] . '</span>';
          $group_5_cal[$terms->tid] = $types->field_early_bird_group_registrat[LANGUAGE_NONE][0]['value'];
          $group_10[$terms->tid] = '<span class="' . $individual . '-' . $terms->tid . ' reg_pric"  style="display:none"> 10 members ₹-' . $types->field_early_bird_group_10_reg[LANGUAGE_NONE][0]['value'] . '</span>';
          $group_10_cal[$terms->tid] = $types->field_early_bird_group_10_reg[LANGUAGE_NONE][0]['value'];
          $single_group[$terms->tid] = $individual;
          //$option[$individual . '-' . $count] = $terms->name . ' <b>Rs ' . $individual . '</b>';
          $option[$individual . '-' . $terms->tid] = $terms->name . ' <b>Rs ' . $individual . '</b>';
          $count++;
        }
      }
    }
    else {
      $count = 1;
      foreach ($ticket_types as $types) {
        $participate = $types->field_participate_type[LANGUAGE_NONE][0]['tid'];
        $individual = $types->field_individual_registration_fe[LANGUAGE_NONE][0]['value'];
        $terms = taxonomy_term_load($participate);
        //$option[$individual . '-' . $count] = $terms->name;
        $option[$individual . '-' . $terms->tid] = $terms->name;
        $count++;
      }
    }
    /*     * **Value assign to Ticket type ***** */
    $group_5_member = implode('  ', $group_5);
    $group_10_member = implode('  ', $group_10);
    unset($form['field_erf_ticket_type']['#validated']);
    unset($form['field_erf_ticket_type'][LANGUAGE_NONE]['#options']);
    $form['field_erf_ticket_type'][LANGUAGE_NONE]['#options'] = $option;
    $form['field_erf_ticket_type'][LANGUAGE_NONE]['#suffix'] = '<div class="ticket-type-message">' . $group_5_member . '<br />' . $group_10_member . '</div>';
    $form['field_erf_ticket_type']['#validated'] = TRUE;
    $ticket_type_value = $_POST['field_erf_ticket_type']['und'];
    $registration_price = itg_event_registration_price_calculat_group($max_delta, $ticket_type_value, $group_5_cal, $group_10_cal, $single_group);
    $settings = array();
    $settings['registration_price'] = $registration_price;
    drupal_add_js(array('itg_event_registration' => array('settings' => $settings)), array('type' => 'setting'));
  }

  // Tab wise permission
  if ($form_id == 'event_backend_node_form') {
    $event_tabs = array('step_first' => 'Basic Details', 'step_second' => 'Registration Fees', 'step_program_schedule' => 'Program Schedule', 'step_sponsor' => 'Sponsor', 'step_highlights' => 'Highlights', 'step_media' => 'Media', 'step_configuration' => 'Configuration');
    global $user;
    if ($user->uid != 1) {
      foreach ($user->roles as $key => $role) {
        $roles[] = variable_get($key . '-tabwise');
      }

      foreach ($roles as $rids) {
        foreach ($rids as $red) {
          $value[$red] = $red;
        }
      }
      $allow_step = array_unique($value);
      ksort($allow_step);

      foreach ($allow_step as $steps) {
        $step_array[substr($steps, 3)] = substr($steps, 3);
      }
      $current_step = $form_state['storage']['step'];
      if (!in_array($current_step, $step_array)) {
        if ($current_step == 'step_configuration') {
          drupal_add_css('.step-configuration {display:none;}', array('type' => 'inline'));
        }
        foreach ($form['#steps'][$current_step]->children as $field_name) {
          // pr($field_name);
          $form[$field_name]['#access'] = FALSE;
          $form[$field_name]['#limit_validation_errors'] = array();
          $form[$field_name]['#tabwise'] = 'skip';
        }
        foreach ($step_array as $allow_stepss) {
          $msg_step .= $event_tabs[$allow_stepss] . ', ';
        }

        $msg = 'You are not authorised to access this step. Your allowed steps are <strong>' . rtrim($msg_step, ', ') . '.</strong>';
      }

      if (!empty($msg)) {
        drupal_set_message($msg, 'error');
      }
    }
  }
}

/**
 * Implement function for calculate price according price
 * @return boolean
 */
function itg_event_registration_price_calculat_group($number, $ticket_type_values, $group_5_cal, $group_10_cal, $single_group) {
  $ticket_type = explode('-', $ticket_type_values);
  $ticket_type_value = $ticket_type[1];
  $group = '';
  if ($number > 9) {
    $number_10_remain = $number % 10;
    $val = $number - $number_10_remain;
    $group_10 = $val / 10;
    $group_ten_price = $group_10_cal[$ticket_type_value];
    $group_10 = $group_10 * $group_ten_price;
    if (!empty($number_10_remain)) {
      if ($number_10_remain < 9 && $number_10_remain > 4) {
        $number_5_remain = $number_10_remain % 5;
        $val_5 = $number_10_remain - $number_5_remain;
        $group_5 = $val_5 / 5;
        $group_five_price = $group_5_cal[$ticket_type_value];
        $group_5 = $group_5 * $group_five_price;
      }
      else {
        $single_10_price = $single_group[$ticket_type_value];
        $group_single_10 = $number_10_remain * $single_10_price;
      }
      if ($number_5_remain < 5 && !empty($number_5_remain)) {
        $single_price = $single_group[$ticket_type_value];
        $group_single_10 = $number_5_remain * $single_price;
      }
    }
    $group = $group_10 + $group_5 + $group_single_10;
  }
  elseif ($number <= 9 && $number > 4) {
    $number_5_remain = $number % 5;
    $val_5 = $number - $number_5_remain;
    $group_new_5 = $val_5 / 5;
    $group_five_price = $group_5_cal[$ticket_type_value];
    $group_new_5 = $group_new_5 * $group_five_price;
    if (!empty($number_5_remain)) {
      if ($number_5_remain < 5) {
        $single_price = $single_group[$ticket_type_value];
        $group_single_5 = $number_5_remain * $single_price;
      }
    }
    $group = $group_new_5 + $group_single_5;
  }
  elseif ($number < 5) {
    $single_price = $single_group[$ticket_type_value];
    $group = $number * $single_price;
  }
  return $group;
//watchdog('GROUP', $group);
}

