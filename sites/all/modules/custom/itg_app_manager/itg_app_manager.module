                    $term_query = db_select('taxonomy_term_data', 'tt');
                    $term_query->join('taxonomy_term_hierarchy', 'th', 'tt.tid = th.tid');
                    $term_query->fields('tt', array('tid', 'name'));
                    $term_query->condition('tt.vid', 14, '=');
                    //$term_query->condition('tt.tid', 1208521, '!=');
