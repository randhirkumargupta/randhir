/**
 * itg_app_manager_form_validate
 */
function hori_itg_app_manager_form_validate($form, &$form_state) {
  // Random example, if the title is 'test' throw an error 
    //p($form_state['values']);
    $m_id = $form_state['values']['m_id'];
    $order_id = $form_state['values']['container'][1]['order_id'];
    $menu_type_id = $form_state['values']['container'][1]['menu_type_id']; 
    $has_subcat = $form_state['values']['container'][1]['has_subcat'];
    //rule1 : not duplicate order for root
    $query = db_select('itg_app_menu_content', 'imc');
    $query->fields('imc', array('id', 'menu_type_id', 'title', 'order_id'));
    $query->condition('imc.menu_type_id', $menu_type_id, '=');
    $query->condition('imc.order_id', $order_id, '=');
    $query->condition('imc.has_subcategory', 0, '=');
    $results = $query->execute()->fetchAll(PDO::FETCH_ASSOC);
    $m_id_db = $results[0]['id'];
    
    if (count($results) > 0 && ($m_id_db != $m_id) && $has_subcat == 0) {
      $title = $results[0]['title'];      
      form_set_error('order_id', t('Order: '.$order_id.' alreday used by: '.$title.''));
    }
    
    //rule2 : not duplicate title for root
    $title = hori_return_menu_section_title($form_state);    
    $query = db_select('itg_app_menu_content', 'imc');
    $query->fields('imc', array('id', 'menu_type_id', 'title', 'order_id'));
    $query->condition('imc.menu_type_id', $menu_type_id, '=');
    $query->condition('imc.title', $title, '=');
    $query->condition('imc.has_subcategory', 0, '=');
    $results = $query->execute()->fetchAll(PDO::FETCH_ASSOC);
    $title = $results[0]['title'];
    
    if (count($results) > 0 && $has_subcat == 0 && arg(2) != "edit") {
      $title = $results[0]['title'];      
      form_set_error('order_id', t('Tile: '.$title.' alreday used by for other section'));
    }
    //rule3 : parent create 1st than chield
    
    if($has_subcat == 1){
        $title = "";
        $title = hori_return_menu_section_title($form_state); 
        $query = db_select('itg_app_menu_content', 'imc');
        $query->fields('imc', array('id', 'menu_type_id', 'title', 'order_id'));
        $query->condition('imc.menu_type_id', $menu_type_id, '=');
        $query->condition('imc.title', $title, '=');
        $query->condition('imc.has_subcategory', 0, '=');
        $results = $query->execute()->fetchAll(PDO::FETCH_ASSOC);
        $title = $results[0]['title'];
        if(!$title){
            form_set_error('order_id', t('Mandatory to create parent 1st'));
        }
    }
    
}

