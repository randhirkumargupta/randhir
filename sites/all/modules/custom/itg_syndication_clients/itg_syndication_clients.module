/**
 * Function to reverse the bitrate
 * @param string video_id
 * @return string
 */
 function reverse_video_bitrate_data($video_id){
	$bitrates_list = array();
	$video_info = itg_xml_itg_videogallery_get_all_video_info_by_video_id($video_id);
	$bitrates = $video_info[0]->bitrate;
	$original_bitrate = str_replace('@',',',$bitrates);
	$bit = explode('@',$bitrates);
	$bit_reverse = array_reverse($bit);
	$matched_bitrate = implode(",",$bit_reverse);
	$bitrates_list['original_bitrate'] = $original_bitrate;
	$bitrates_list['matched_bitrate'] = $matched_bitrate;
	return $bitrates_list;
 }
