/**
 * Function is used to fetch thumbnail
 * 
 */

function get_thumbnail_by_fid($fid = NULL){
    if(!empty($fid)){
        $file_obj = file_load($fid);
        $image_data = image_style_url('image170x127', $file_obj->uri);
        $file_obj->imageurl = $image_data;
        return $file_obj;
    }
    return FALSE;
}

