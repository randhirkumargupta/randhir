/**
 * Implements hook_menu().
 */

function itg_rss_feed_menu() {
  $items['rss/anchor'] = array(
    'page callback' => 'anchorRSSFeed',
    'access arguments' => array('access content'),
    'file' => 'inc/anchorRSSFeed.inc',
    'type' => MENU_CALLBACK,
  );
  
  $items['rss/article'] = array(
    'page callback' => 'articleRSSFeed',
    'access arguments' => array('access content'),
    'file' => 'inc/articleRSSFeed.inc',
    'type' => MENU_CALLBACK,
  );
  
    return $items;
}

