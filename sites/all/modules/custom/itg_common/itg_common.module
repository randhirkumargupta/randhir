/**
 * Get calnder week start and end date
 * @param array $week
 * @param array $year
 * @return array
 */
function _get_calender_week_start_end_date($week, $year) {
  $dto = new DateTime();
  $ret['week_start'] = $dto->setISODate($year, $week)->format('Y-m-d');
  $ret['week_end'] = $dto->modify('+6 days')->format('Y-m-d');
  return $ret;
}

/**
 * Function is used to convert String space
 * */
function itg_get_dive_region_name($str, $type = '') {
  if (empty($str)) {
    return '';
  }
  $pattern = "/<a ?.*>(.*)<\/a>/";
  preg_match($pattern, $str, $matches);
  if (count($matches) > 0) {
    $str = $matches[1];
  }
  $text = preg_replace('~&~', 'and', $str);
  $text = preg_replace('~[^\pL\d]+~u', '-', $text);
  $text = iconv('utf-8', 'us-ascii//TRANSLIT', $text);
  $text = preg_replace('~[^-\w]+~', '', $text);
  $text = trim($text, '-');
  $text = preg_replace('~-+~', '-', $text);
  $text = strtolower($text);
  $textarray = explode('-', $text);
  $return = $type;
  foreach ($textarray as $value) {
    $return .= ucfirst($value);
  }
  return $return;
}

/**
 * Do not allow to change modearation state from published to draft.
 * Implements hook_node_update
 * @param type $node
 */ 
function itg_common_node_update($node) {
  if ((isset($node->workbench_moderation_state_current)) && ($node->workbench_moderation_state_current == 'published') && (isset($node->workbench_moderation_state_new)) && ($node->workbench_moderation_state_new == 'draft')) {
    $node->workbench_moderation_state_new = 'published';
  }
}

/**
 * Get fact schema for story.
 * @return type string
 */
function get_fact_schema() {
  $arg = arg();
  $entity_id = isset($arg['1']) ? $arg['1'] : '';
  if(!empty($entity_id)) {
    $query = db_select('field_data_field_story_schema', 's');
    $query->fields('s', array('field_story_schema_value'));
    $result = $query->condition('s.entity_id', $entity_id)->execute()->fetchAssoc();
    return $result['field_story_schema_value'];
  } 
}
