/**
 * Get required data for xml crossponding to content type.
 */
function itg_sitemap_chunk_get_tags_data($contents, $content_type) {
  foreach ($contents as $key => $data) {
    if ($data->content_type == $content_type) {
      return $contents[$key];
    }
  }
}
