  $node->field_bestcollege_rank[LANGUAGE_NONE][0]['value'] = $rank;
  $node->field_bestcollege_year[LANGUAGE_NONE][0]['value'] = $year;
  $node->field_college_id[LANGUAGE_NONE][0]['value'] = $collegeid;

  // print "year = ".$year;
  if ($year) {
    if ($year == '2016') {
      $tid = '844693'; // static set tid
