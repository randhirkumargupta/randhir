/**
 * Implements hook_form()
 * @return array
 */
function itg_syndication_form() {
  // Get list of all content type
  $all_content_type = node_type_get_types();
  
  // Praper array for options
  $options = array('_none' => '- Select web property - ');
  foreach ($all_content_type as $key => $value) {
    $options[$key] = $value->name;
  }
  
  // Create web property field.
  $form['web_property'] = array(
    '#type' => 'select', 
    '#title' => t('Web Property'),
    '#description' => t('System displays all the web properties. User can select any of them and correspondingly content will only be displayed.'),
    '#options' => $options,
    '#default_value' => '_none',
    '#required' => TRUE,
    '#ajax' => array(
      'callback' => 'itg_syndication_issue_callback',
      'wrapper' => 'issue_replace',      
    ),
  );
  
  // Create issue field
  $form['issue'] = array(
    '#type' => 'select', 
    '#title' => t('Issue'),
    '#description' => t('The drop down displays the values from the repository of issues for the selected magazine.'),
    '#options' => itg_syndication_issue_list(),    
    '#default_value' => '_none',
     '#prefix' => '<div id="issue_replace">',
    '#suffix' => '</div>',
    '#states' => array(
      'visible' => array(
        ':input[name="web_property"]' => array('value' => 'magazine'),
      ),
      'required' => array(
        ':input[name="web_property"]' => array('value' => 'magazine'),
      ),
    ),
  );     
  
  return $form;
}

/**
 * Callback function for magazine.
 * @return array
 */
function itg_syndication_issue_callback($form, $form_state) {
  return $form['issue'];
}

function itg_syndication_issue_list() {
  $itg_query = db_select('node', 'n');
  $itg_query->fields('n', array('nid','title'))
      ->condition('type', 'issue')
      ->condition('status', 1);
  $itg_result = $itg_query->execute();
  $data = array();
  foreach($itg_result as $value) {
    $data[$value->nid] = $value->title;
  }
  
  return $data;
}

/**
 * Check duplicate client name.
 * @param string $title
 * @param string $sharing_mode
 * @param integer $nid
 * @return integer
 */ 
function itg_syndication_check_duplicate($title, $sharing_mode, $nid = NULL) {
  $itg_query = db_select('node', 'n');
  if ($nid != NULL) {
    $itg_query->condition('n.nid', $nid, '!=');
  }
  $itg_query->condition('n.title', $title)
      ->fields('n', array('nid'));
  $itg_query->join('field_data_field_content_sharing_mode', 'cm', 'n.nid = cm.entity_id');
  $itg_query->condition('cm.field_content_sharing_mode_value', $sharing_mode);
  $itg_result = $itg_query->execute()->fetchField();
  
  return $itg_result;
}

/**
 * Implements hook_form_alter()
 * @param array $form
 * @param array $form_state
 * @param string $form_id
 */ 
function itg_syndication_form_alter(&$form, &$form_state, $form_id) {  
  if ($form_id == 'syndication_client_node_form') {        
    // Load vocabulary id from machine name.
    $vid = taxonomy_vocabulary_machine_name_load('client_title');
    
    // Load list of clients from master
    $options = taxonomy_get_tree($vid->vid);
    
    // Create default option for list
    $data['_none']  = '- Select a value -';
    
    // Prepare options list from php stdObject
    foreach ($options as $value) {
      $data[$value->name] = $value->name;
    }
    
    // Convert title fields from textfield to select fields.
    $form['title'] = array(
      '#type' => 'select',
      '#title' => t('Client Title'),
      '#description' => t('Clientâ€™s name will be fetched from Master Sheet.  e.g. Airtel, Vodafone etc'),
      '#required' => TRUE,
      '#options' => $data,
      '#default_value' => $form['nid']['#value'] != NULL ? $form['title']['#default_value'] : '_none',
    );
    
    // Include js file
    $form['#attached']['js'] = array(
      drupal_get_path('module', 'itg_syndication') . '/js/itg_syndication.js',      
    );
    
    // Custom callback for  after form built
    $form['#action'] = '?destination=syndication-client-listing';
    $form['#after_build'][] = 'itg_syndication_after_build';
    $form['actions']['submit']['#submit'][] = 'itg_syndication_change_message';
  }
  if ($form_id == 'syndication_client_service_assoc_node_form') {
    $form['#action'] = '?destination=syndication-client-listing';
    $form['#after_build'][] = 'itg_syndication_service_after_build';
    $form['actions']['submit']['#submit'][] = 'itg_syndication_service_change_message';
  }
}

