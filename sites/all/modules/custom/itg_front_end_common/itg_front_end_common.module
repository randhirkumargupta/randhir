/**
 * Implements get_related_display_title().
 */
function get_related_display_title($nid, $display_id) {
  if (!empty($nid) && !empty($display_id)) {
    $query = db_select('field_data_field_cm_related_content_detail', 'ds')
        ->fields('ds', array('field_cm_related_content_detail_value'))
        ->condition('ds.entity_id', $nid);
    $display_data = $query->execute()->fetchField();
    if (!empty($display_data)) {
      $explode_string = explode(',', $display_data);
      $string_match = '_' . $display_id . '@';
      foreach ($explode_string as $key => $value) {
        if (strpos($value, $string_match) !== false) {
          $final_array_string = explode('@', $value);
          if (isset($final_array_string[2])) {
            return $final_array_string[2];
          }
        }
      }
    }
    return;
  }
}

