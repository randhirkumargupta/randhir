/**
 * Implements hook_node_view().
 * {@inheritdoc}
 */
function itg_front_end_common_node_view($node, $view_mode, $langcode) {
  $os = array("search_index", "amp");
  if (!in_array($view_mode, $os)) {
    if ($node->type == 'breaking_news' && !empty($node->nid) && $node->op != 'Preview') {
      drupal_add_js(drupal_get_path('module', 'itg_front_end_common') . '/js/itg_front_end_common.js', array('weight' => 2, 'scope' => 'footer'));
    }
    if ($node->type == 'story' || $node->type == 'photogallery' || $node->type == 'videogallery') {
      if (!empty($node->field_gallery_image['und'][0]['value']) && $node->type == 'photogallery') {
        $entity = entity_load('field_collection_item', array($node->field_gallery_image['und'][0]['value']));
        $photo_image = $entity[$node->field_gallery_image['und'][0]['value']]->field_images['und'][0]['uri'];
      }

      $twitter_arr = array('card', 'site', 'creator', 'title', 'description', 'image');
      foreach ($twitter_arr as $key => $value) {
        if ($value == 'card') {
          $description = 'summary_large_image';
        }
        if ($value == 'site') {
          $description = '@itg';
        }
        if ($value == 'creator') {
          $description = '@ankushgautam76';
        }
        if ($value == 'title') {
          $description = mb_strimwidth(strip_tags($node->title), 0, 130, "..");
        }
        if ($value == 'description' && $node->type == 'story') {
          //$description = mb_strimwidth(strip_tags($node->body[LANGUAGE_NONE][0]['value']), 1, 140, "..");
          $description = mb_strimwidth(strip_tags($node->title), 0, 130, "..");
        }
        if ($value == 'description' && $node->type == 'videogallery') {
         $description = mb_strimwidth(strip_tags($node->title), 0, 130, "..");
        }
        if ($value == 'description' && $node->type == 'photogallery') {
          $description = mb_strimwidth(strip_tags($node->title), 0, 130, "..");
        }
        if ($value == 'image' && $node->type == 'story') {
          $description = file_create_url($node->field_story_extra_large_image[LANGUAGE_NONE][0]['uri']);
        }
        if ($value == 'image' && $node->type == 'videogallery') {
          $description = file_create_url($node->field_story_extra_large_image[LANGUAGE_NONE][0]['uri']);
        }
        if ($value == 'image' && $node->type == 'photogallery') {
          $description = file_create_url($photo_image);
        }

        $twitter_tag = array(
          '#type' => 'html_tag',
          '#tag' => 'meta',
          '#attributes' => array(
            'name' => 'twitter:' . $value,
            'content' => $description,
          )
        );
        drupal_add_html_head($twitter_tag, 'twitter_tag' . $key);
      }
    }
  }
}


/**
 * Custom function to fetch related content.
 * @param int $nid
 */
function itg_get_related_content($nid) {

  $query = db_select('field_data_field_common_related_content', 'tt');
  $query->fields('tt', array('field_common_related_content_value'));
  $query->condition('tt.entity_id', $nid, '=');
  $related_result = $query->execute()->fetchField();
  return $related_result;
}

