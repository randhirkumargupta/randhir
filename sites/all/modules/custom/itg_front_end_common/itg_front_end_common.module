      if (!empty($related_image_url)) {
        $related_image_data = 170;
        $related_src_set = $related_image_url . ' ' . $related_image_data . 'w';
      }
      $related_image = '<amp-img height="127" layout="responsive" width="170" alt="'.$related_title.'" title="'.$related_title.'" src="' . $related_image_url . '"><div fallback>offline</div></amp-img>';

        if (function_exists('itg_apache_solr_get_site_url')) {
            $hash_url = itg_apache_solr_get_site_url();
        }
        $front_url = $hash_url[$related_data->hash].'/'.url($related_data->path_alias);
        $request = parse_url($front_url);
        $host = $request['host'];
        $path = $request['path'];
        $amp_url = SITE_PROTOCOL.$host.'/amp'.$path;
        $image_link_url = $amp_url;
        if (empty($related_image_url)) {
        $img_url = $base_url . '/sites/all/themes/itg/images/itg_image170x127.jpg';
        $related_story.= '<li>';
        $related_story.= '<span class="tile"><a href="'.$amp_url.'">'.$related_title.'</a></span><a href="'.$image_link_url.'"><amp-img height="127" width="170" layout="responsive" src="'.$img_url.'" title="'.$related_title.'" alt="'.$related_title.'" /><div fallback>offline</div></amp-img></a></li>';
      }
      else {
        $related_story.= '<li>';
        $related_story.= '<span class="tile"><a href="'.$amp_url.'">'.$related_title.'</a></span><a href="'.$image_link_url.'">' . $related_image .'</a></li>';
      }
    }
    $i++;
    if ($i == 4)
      break;
  }
  
  $related_story.= '</ul>';
  return $related_story;
  }
}

/**
 * Implements itg_get_node_details().
 * @global type $base_url
 * @param type $nid
 * @return array
 */
function itg_get_node_details($nid) {
  global $base_url;
  if (!empty($nid)) {
    $query = db_select('node', 'n');
    $query->leftjoin('field_data_field_story_extra_large_image', 'sm', 'sm.entity_id = n.nid');
    $query->fields('n', array('title', 'created','nid', 'type'))
          ->fields('sm', array('field_story_extra_large_image_fid'))
          ->condition('n.nid', $nid)
          ->condition('n.status', 1);
    $query->orderBy('n.created', 'DESC'); 
    $result = $query->execute();

    return $record = $result->fetchAll(PDO::FETCH_ASSOC);
  }
}

/**
 * Implements itg_get_node_status().
 * @param type $nid
 * @return array
 */
function itg_get_node_status($nid) {
  if (!empty($nid)) {
    $query = db_select('node', 'n');
    $query->fields('n', array('status'))
          ->condition('n.nid', $nid)
          ->condition('n.status', 1);
    $query->orderBy('n.created', 'DESC'); 
    $result = $query->execute()->fetchField();

    return $result;
  }
}

/*
 * Get third Party Data of AT and BT
 * @param $type
 * @return array
 */
function getthirdPartyData($type) {
  if (!empty($type)) {
    $records = array();
    if(db_table_exists('itg_external_feed_data')) {
      $query = db_select('itg_external_feed_data', 'ifd');
      $query->fields('ifd', array('content_id'))
            ->fields('ifd', array('content_title'))
            ->fields('ifd', array('content_url'))  
            ->fields('ifd', array('content_thumb_image'))  
            ->condition('ifd.content_site', $type)
            ->range(0, 5);
      $query->orderBy('ifd.id', 'ASC'); 
      $result = $query->execute();
      $records = $result->fetchAll(PDO::FETCH_ASSOC);
    }
    return $records;
  }
}

/**
 * function for get content from section
 * @param int $tid
 * @param int $limit
 * @return array $result
 */
function itg_section_card_content_by_tid($tid, $limit) {
  $query = db_select('node', 'n');
  $query->join('taxonomy_index', 'ti', 'n.nid = ti.nid');
  $query->fields('n');
  $query->condition('ti.tid', $tid, '=');
  $query->condition('n.type', 'story');
  $query->condition('n.status', 1);
  $query->range(0, $limit);
  $query->orderBy('n.created', 'DESC'); //ORDER BY created
  $result = $query->execute();
  //return $record = $result->fetchAll(PDO::FETCH_ASSOC);
  return $result;
}
