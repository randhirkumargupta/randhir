/**
 * Implements hook_node_view().
 * {@inheritdoc}
 */
function itg_front_end_common_node_view($node, $view_mode, $langcode) {
  global $base_url;
  
  $is_fron_page = drupal_is_front_page();
  if ($is_fron_page) {
    if (isset($arg_data->metatags[LANGUAGE_NONE]['title']['value']) && !empty($arg_data->metatags[LANGUAGE_NONE]['title']['value'])) {
      drupal_set_title($node->metatags[LANGUAGE_NONE]['title']['value']);
    }    
  }
  $os = array("search_index");
  $key = '';
  if (!in_array($view_mode, $os)) {
    if ($node->type == 'breaking_news' && !empty($node->nid) && $node->op != 'Preview') {
      drupal_add_js(drupal_get_path('module', 'itg_front_end_common') . '/js/itg_front_end_common.js', array('weight' => 2, 'scope' => 'footer'));
    }
    
  $ctype = array('story', 'photogallery', 'videogallery', 'mega_review_critic', 'blog', 'breaking_news', 'podcast', 'page');
  if (in_array($node->type, $ctype)) {
      if (!empty($node->field_gallery_image['und'][0]['value']) && $node->type == 'photogallery') {
        $entity = entity_load('field_collection_item', array($node->field_gallery_image['und'][0]['value']));
        $photo_image = $entity[$node->field_gallery_image['und'][0]['value']]->field_images['und'][0]['uri'];
      }
      $og_desc = $node->metatags[LANGUAGE_NONE]['description']['value'];
      $twitter_arr = array('card', 'site', 'creator', 'title', 'description', 'image');
      foreach ($twitter_arr as $key => $value) {
        if ($value == 'card') {
          $description = 'summary_large_image';
        }
        if ($value == 'site') {
          $description = '@indiatoday';
        }
        if ($value == 'creator') {
          $description = '@indiatoday';
        }
        if ($value == 'title') {
          $description = mb_strimwidth(strip_tags($node->title), 0, 130, "..");
        }
        if ($value == 'description' && $node->type == 'story') {
          $description = $og_desc;
        }
        if ($value == 'description' && $node->type == 'videogallery') {
          $description = $og_desc;
        }
        if ($value == 'description' && $node->type == 'photogallery') {
          $description = $og_desc;
        }
        if ($value == 'image' && ($node->type == 'story' || $node->type == 'breaking_news') && !empty($node->field_story_extra_large_image[LANGUAGE_NONE][0]['uri'])) {
          $description = file_create_url($node->field_story_extra_large_image[LANGUAGE_NONE][0]['uri']);
        }
        if ($value == 'image' && $node->type == 'videogallery' && !empty($node->field_story_extra_large_image[LANGUAGE_NONE][0]['uri'])) {
          $description = file_create_url($node->field_story_extra_large_image[LANGUAGE_NONE][0]['uri']);
        }
        if ($value == 'image' && $node->type == 'photogallery' && !empty($node->field_story_extra_large_image[LANGUAGE_NONE][0]['uri'])) {
          $description = file_create_url($photo_image);
        }
        if ($is_fron_page) {
          if ($value == 'card') {
            $description = '';
          }
          if ($value == 'creator') {
            $description = '';
          }
        }

        $twitter_tag = array(
          '#type' => 'html_tag',
          '#tag' => 'meta',
          '#attributes' => array(
            'name' => 'twitter:' . $value,
            'content' => $description,
          )
        );
        
        drupal_add_html_head($twitter_tag, 'twitter_tag' . $key);
        
      }
      
      $fb_image = file_create_url($node->field_story_extra_large_image[LANGUAGE_NONE][0]['uri']);
      $type = $node->type;
      if ($is_fron_page) {
         $type = 'news';
         $fb_image = file_create_url(file_default_scheme() . '://../sites/all/themes/itg/logo.png');
         $og_desc = 'Check out the latest news from India and around the world. Latest India news on Bollywood, Politics, Business, Cricket, Technology and Travel.';
      }
      
      
      $fb_image_tag = array(
          '#type' => 'html_tag',
          '#tag' => 'meta',
          '#attributes' => array(
            'property' => 'og:image',
            'content' => $fb_image,
          ),
          '#weight' => -10,
        );
      
      $fb_og_title = array(
          '#type' => 'html_tag',
          '#tag' => 'meta',
          '#attributes' => array(
            'property' => 'og:title',
            'content' => $node->title,
          )
        );
      $fb_og_type = array(
          '#type' => 'html_tag',
          '#tag' => 'meta',
          '#attributes' => array(
            'property' => 'og:type',
            'content' => $type,
          )
        );
      
      $og_locale = array(
          '#type' => 'html_tag',
          '#tag' => 'meta',
          '#attributes' => array(
            'property' => 'og:locale',
            'content' => 'en_US',
          )
        );
      
      $og_sitename = array(
          '#type' => 'html_tag',
          '#tag' => 'meta',
          '#attributes' => array(
            'property' => 'og:site_name',
            'content' => 'India Today',
          )
        );
      
      $data = getimagesize($fb_image);
      $publish_time = date('F d,Y h.i A', strtotime($node->field_itg_content_publish_date[LANGUAGE_NONE][0]['value']));
      $og_image_width = array(
          '#type' => 'html_tag',
          '#tag' => 'meta',
          '#attributes' => array(
            'property' => 'og:image:width',
            'content' => $data[0],
          )
        );
      $og_image_height = array(
          '#type' => 'html_tag',
          '#tag' => 'meta',
          '#attributes' => array(
            'property' => 'og:image:height',
            'content' => $data[1],
          )
        );
      $og_image_type = array(
          '#type' => 'html_tag',
          '#tag' => 'meta',
          '#attributes' => array(
            'property' => 'og:image:type',
            'content' => $data['mime'],
          )
        );
      
      $og_publish_time = array(
          '#type' => 'html_tag',
          '#tag' => 'meta',
          '#attributes' => array(
            'property' => 'og:published_time',
            'content' => $publish_time,
          )
        );
      
      $og_description = array(
          '#type' => 'html_tag',
          '#tag' => 'meta',
          '#attributes' => array(
            'property' => 'og:description',
            'content' => $og_desc,
          )
        );
      
      if($view_mode != 'amp') {
        $og_path = $base_url . '/' . drupal_get_path_alias('node/' . $node->nid);
      } else {
        $og_path = $base_url . '/amp/' . drupal_get_path_alias('node/' . $node->nid);
      }
      $fb_og_url = array(
          '#type' => 'html_tag',
          '#tag' => 'meta',
          '#attributes' => array(
            'property' => 'og:url',
            'content' => $og_path,
          )
        );
      
      if (!empty(variable_get('custom_canonical_amp'))) {
        $amp_canonical = $base_url . '/' . $node->path['alias'];
        $head_elements = array(
          '#type' => 'html_tag',
          '#tag' => 'link',
          '#attributes' => array('rel' => 'canonical', 'href' => $amp_canonical),
        );
        drupal_add_html_head($head_elements, 'canonical');
      }
      // Branch io code start
      if ($node->type == 'story' || $node->type == 'photogallery' || $node->type == 'videogallery') {
      $branchio_tag = array(
          '#type' => 'html_tag',
          '#tag' => 'meta',
          '#attributes' => array(
            'name' => 'branch:deeplink:canonical_identifier',
            'content' => $node->nid,
          )
        );
        $branchio_type = array(
          '#type' => 'html_tag',
          '#tag' => 'meta',
          '#attributes' => array(
            'name' => 'branch:deeplink:data_type',
            'content' => $node->type,
          )
        );
        drupal_add_html_head($branchio_tag, 'branchio_tag');
        drupal_add_html_head($branchio_type, 'branchio_type');
      }
      // Branch io code end
      drupal_add_html_head($fb_og_url, 'fb_og_url');
      drupal_add_html_head($og_description, 'og_description');
      drupal_add_html_head($fb_og_title, 'fb_og_title');
      drupal_add_html_head($fb_og_type, 'fb_og_type');
      drupal_add_html_head($og_locale, 'og_locale');
      drupal_add_html_head($og_sitename, 'og_sitename');
      drupal_add_html_head($og_publish_time, 'og_publish_time');
      if(!empty($node->field_story_extra_large_image[LANGUAGE_NONE][0]['uri'])) {
        drupal_add_html_head($fb_image_tag, 'fb_image_tag');
        drupal_add_html_head($og_image_width, 'og_image_width');
        drupal_add_html_head($og_image_height, 'og_image_height');
        drupal_add_html_head($og_image_type, 'og_image_type');
      }
      else if ($is_fron_page) {
        drupal_add_html_head($fb_image_tag, 'fb_image_tag');
        drupal_add_html_head($og_image_width, 'og_image_width');
        drupal_add_html_head($og_image_height, 'og_image_height');
        drupal_add_html_head($og_image_type, 'og_image_type');
      }
    }
  }
}


/**
 * Custom function to fetch related content.
 * @param int $nid
 */
function itg_get_related_content($nid) {
  if(!empty($nid)) {
    $query = db_select('field_data_field_common_related_content', 'tt');
    $query->fields('tt', array('field_common_related_content_value'));
    $query->condition('tt.entity_id', $nid, '=');
    $related_result = $query->execute()->fetchField();
    return $related_result;
  }
}

