/**
 * Implements hook_block_view()
 * {@inheritdoc}
 */
function itg_front_end_common_block_view($delta = '') {
  $block = array();

  switch ($delta) {
    case 'taboola_block':
      $block['content'] = _taboola_block_content();
      break;
    
    case 'may_be_recommend_block':
      $block['content'] = _may_be_recommend_block_content();
      break;
	
	case 'recommend_news_block':
      $block['content'] = _recommend_new_block_content();
      break;
    
    case 'crowdy_newss_block':
      $block['content'] = _crowdy_news_block_content();
      break;
	
    case 'vukkul_block':
      $is_front_page = drupal_is_front_page();
      if ($is_front_page) {
        $block['content'] = '';
      }
      else {
        $block['content'] = _vukkul_block_content();
      }
      break;
    
    case 'related_video_block':
      $block['content'] = _related_video_block_content();
      break;
    
    case 'related_photo_block':
      $block['content'] = _related_photo_block_content();
      break; 
    
    case 'related_story_left_block':
      $block['content'] = _related_story_left_block_content();
      break; 
    
    case 'related_story_bottom_block':
      $block['content'] = _related_story_bottom_block_content();
      break; 
    
    case 'related_story_amp_block':
      $block['content'] = _related_story_amp_block_content();
      break; 
    
    case 'related_podcast_block':
      $block['content'] = _related_podcast_bottom_block_content();
      break; 
    
    case 'latest_from_aajtak':
      $block['content'] = _latest_from_aajtak();
      break; 
    
    case 'latest_from_businesstoday':
      $block['content'] = _latest_from_businesstoday();
      break; 
    
    case 'latest_from_pti':
      $block['content'] = _latest_from_pti();
      break;
    
    case 'amp_story_ad_block':
      $block['content'] = _amp_story_ad_block();
      break;
    
    case 'recommended_anonymous_user':
      global $user, $base_url;
      module_load_include('inc', 'itg_widget', 'includes/itg_widget_personalization');
      $data = get_personlization_front_block_data(FALSE);
      $block['content'] = theme("personlization_front_end", array("data" => $data));
      
      drupal_add_js('jQuery(document).ready(function() {
    jQuery(".recommended-slider").slick({
      slidesToShow: 3,
      slidesToScroll: 1,
      centerPadding: "40px",
      prevArrow: "<button class = \'slick-prev\'><i class = \'fa fa-angle-left\'></i></button>",
      nextArrow: "<button class = \'slick-next\'><i class = \'fa fa-angle-right\'></i></button>",
      responsive: [    
        {
          breakpoint: 1024,
          settings: {
            slidesToShow: 2,
            slidesToScroll: 1
          }
        },
         {
          breakpoint: 680,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1
          }
        }       
      ]
    });
  });', array("type" => "inline"));
     
      break;
  }

  return $block;
}

/**
 * Implements taboola block content
 */
function _taboola_block_content() {
  $output = '';
  if (!empty(variable_get('taboola_bottom_block')) && empty(variable_get('disable_third_party_api'))) {
    $node = menu_get_object('node');
    if (isset($node) && $node->type == 'photogallery') {
      $tab_org = "_taboola.push({article:";
      $tab_rep = "_taboola.push({photo:";
      $output = variable_get('taboola_bottom_block');
      $output = str_replace($tab_org, $tab_rep, $output);
    }
    else if (isset($node) && $node->type == 'videogallery') {
      $tab_org = "_taboola.push({article:";
      $tab_rep = "_taboola.push({video:";
      $output = variable_get('taboola_bottom_block');
      $output = str_replace($tab_org, $tab_rep, $output);
    }
    else {
      $output = variable_get('taboola_bottom_block');
    }
  } else {
    $output = '';
    //watchdog('taboola script', 'Please add taboola script in setting page.');
  }
  return $output;
}

