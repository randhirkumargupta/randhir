/**
 * Custom function to fetch related content.
 * @param int $nid
 */
function itg_get_related_content($nid) {

  $query = db_select('field_data_field_common_related_content', 'tt');
  $query->fields('tt', array('field_common_related_content_value'));
  $query->condition('tt.entity_id', $nid, '=');
  $related_result = $query->execute()->fetchField();
  return $related_result;
}

/**
 * Implements make_hin_str().
 * @param string $str
 */
function make_hin_str($str) {
  $engStr = array('Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December', 'Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec', 'UPDATED');
  $hinStr = array('रविवार', 'सोमवार', 'मंगलवार', 'बुधवार', 'गुरुवार', 'शुक्रवार', 'शनिवार', 'जनवरी', 'फरवरी', 'मार्च', 'अप्रैल', 'जून', 'मई', 'जुलाई', 'अगस्त', 'सितंबर', 'अक्टूबर', 'नवंबर', 'दिसंबर', 'जनवरी', 'फरवरी', 'मार्च', 'अप्रैल', 'जून', 'मई', 'जुलाई', 'अगस्त', 'सितंबर', 'अक्टूबर', 'नवंबर', 'दिसंबर', 'अप्डैटिड');
  $converted = str_replace($engStr, $hinStr, $str);
  return $converted;
}

/**
 * Implements itg_front_end_node_weight().
 * @param int $nid
 * @param string $view_name
 * @param string $view_display
 */
function itg_front_end_node_weight($nid, $view_name, $view_display) {
  $query = db_select('draggableviews_structure', 'ds');
  $query->fields('ds', array('dvid'));
  $query->condition('ds.view_name', $view_name, '=');
  $query->condition('ds.view_display', $view_display, '=');
  $query->condition('ds.entity_id', $nid, '=');
  $weight_result = $query->execute()->fetchField();
  return $weight_result;
}

/**
 * Implements itg_get_previousnext_weight().
 * @param int $vvid
 * @param string $view_name
 * @param string $view_display
 */
function itg_get_previousnext_weight($vvid, $view_name, $view_display) {
  $query = db_select('draggableviews_structure', 'ds');
  $query->fields('ds', array('entity_id'));
  $query->condition('ds.view_name', $view_name, '=');
  $query->condition('ds.view_display', $view_display, '=');
  $query->condition('ds.dvid', $vvid, '=');
  $weight_result = $query->execute()->fetchField();
  return $weight_result;
}


/**
 * Implements itg_flag_details
 */
function itg_related_hide_show_details() {
  global $user;
  $nd_id = $_POST['nd_id'];
  $related_content = itg_get_related_content($nd_id);
                  $related_content = explode(',', $related_content);
                  foreach ($related_content as $fn_result) {
                    $related_content = explode('_', $fn_result);
                    $final_related [] = $related_content[1];
                  }
                  $final_related = implode(' OR ', $final_related);
  echo views_embed_view('sambandhit_khabre', 'page', $final_related);
  exit;
}