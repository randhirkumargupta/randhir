  }
  if(!empty($related_result_amp)) {
  $related_story = '<h2>RELATED</h2>';
  $related_story.= '<ul>';
  $i = 0;
  foreach ($related_result_amp as $site_hash_key) {
    $current_entity_id = $site_hash_key;
    $related_data = itg_get_related_story_content($current_entity_id);
    if (!empty($related_data)) {
      $display_title = get_related_display_title($arg[1], $current_entity_id);
      if(!empty($display_title)) {
        $display_title = html_entity_decode($display_title);
      } else {
        $display_title = html_entity_decode($related_data->label);
      }
      
      $related_title = mb_strimwidth($display_title, 0, 80, "..");
      $related_title = str_replace(array('\'', '"'), '', $related_title); 
      
      $related_image_url = $related_data->sm_field_custom_story_small_large_url[0];
