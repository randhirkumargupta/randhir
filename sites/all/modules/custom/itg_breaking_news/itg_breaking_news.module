/**
 * Function for ajax request callback
 * 
 */
function cricket_live_blog_content_callback() {
    $match_id = $_POST['match_id'];
    if (isset($match_id)) {
        $commentary_id = $_POST['commentary_id'];
        if (isset($_POST['is_load_new']) && $_POST['is_load_new'] == 'true') {
            $html = get_cricket_live_blog_data($match_id, NULL, NULL, $commentary_id, TRUE);
        }
        else {
            $html = get_cricket_live_blog_data($match_id, NULL, 20, $commentary_id, FALSE);
        }

        print json_encode(array('status' => 'success', 'data' => $html));
    }
    else {
        print json_encode(array('status' => 'error'));
    }
    die;
}

/**
 * Function for Live cricket blog 
 * 
 */
function get_cricket_live_blog_data($match_id, $start, $total, $commentary_id, $latest = FALSE) {

    if (!empty($match_id)) {
        $api_base_url = 'http://feeds.intoday.in/xml_it/commentary/';
        $match_commentary = file_get_contents($api_base_url . $match_id . '_ballbyball.json');
        if ($match_commentary) {
            $match_commentary = json_decode($match_commentary);
            if (is_array($match_commentary->Match->Innings)) {
                $innings = array_reverse($match_commentary->Match->Innings, TRUE);
            }
            else {
                $innings = $match_commentary->Match->Innings;
            }
            if (is_array($innings)) {
                $ball_by_ball = array_reverse($innings[0]->Node, TRUE);
            }
            else {
                $ball_by_ball = array_reverse($innings->Node, TRUE);
            }

            if ($commentary_id != NULL && $latest) {
                $exit = FALSE;
                $flag = FALSE;
                $commentary = array();
                $counter = 0;
                $current_inn = $_POST['current_inn'];
                $_ball_by_ball = $match_commentary->Match->Innings;
                if (!is_array($_ball_by_ball)) {
                    $_ball_by_ball = array($_ball_by_ball);
                }
                foreach ($_ball_by_ball as $inn_key => $inn_value) {
                    $commentary_nodes = ($inn_value->Node);
                    foreach ($commentary_nodes as $node_key => $node_value) {
                        if ($flag) {
                            $node_value->innings = $inn_key;
                            $commentary[] = $node_value;
                            $counter++;
                        }
                        if ($node_value->Id == $commentary_id && $inn_key == $current_inn) {
                            $flag = TRUE;
                        }
                        if ($counter == 20) {
                            $exit = TRUE;
                            break;
                        }
                    }
                    if ($exit) {
                        break;
                    }
                }
                $commentary = array_reverse($commentary, TRUE);
            }
            else if ($commentary_id != NULL && !$latest) {
                $counter = 1;
                $total = (!empty($total) ? $total : 20);
                $flag = FALSE;
                $commentary = array();
                $exit = FALSE;
                $current_inn = $_POST['current_inn'];
                if (!is_array($innings)) {
                    $innings = array($innings);
                }

                foreach ($innings as $key => $inning) {
                    $_commentaries = array_reverse($inning->Node, TRUE);
                    foreach ($_commentaries as $_commentary) {
                        if ($flag) {
                            $_commentary->innings = $key;
                            $commentary[] = $_commentary;
                            $counter++;
                        }
                        if ($_commentary->Id == $commentary_id && $key == $current_inn) {
                            $flag = TRUE;
                        }
                        if ($counter == ($total + 1)) {
                            $exit = TRUE;
                            break;
                        }
                    }
                    if ($exit) {
                        break;
                    }
                }
            }
            else {
                if (!is_array($innings)) {
                    $innings = array($innings);
                }
                $current_inn_ = key($innings);
                $ball_by_ball = array_reverse($innings[$current_inn_]->Node, TRUE);
                foreach ($ball_by_ball as $key => $value) {
                    $ball_by_ball[$key]->innings = $current_inn_;
                }
                $commentary = array_slice($ball_by_ball, 0, $total);
            }
            return theme('cricket_live_blog_commentary', array('data' => $commentary));
        }
    }
}

