/**
 * Redirect to latest node of breaking news
 * if user hit the breakingnews url
 */
function redirect_breakingnews_to_latest_node() {
  $latestnid = '';
  $latestnid_query = db_select('node', 'n');
  $latestnid_query->leftJoin('field_data_field_type', 'ft', 'ft.entity_id = n.nid');
  $latestnid_query->fields('n', array('nid'));
  $latestnid_query->condition('n.type', 'breaking_news');
  $latestnid_query->condition('n.status', 1);
  $latestnid_query->condition('ft.field_type_value', 'Breaking News');
  $latestnid_query->condition('ft.bundle', 'breaking_news');
  $latestnid_query->condition('ft.entity_type', 'node');
  $latestnid_query->orderBy('n.changed', 'DESC');
  $latestnid_query->range(0, 1);
  $latestnid = $latestnid_query->execute()->fetchField();
  if (is_numeric($latestnid)) {
    drupal_goto('node/' . $latestnid);
  }
}

/**
 * function for show Cricket data from json.
 * @param string $match_id
 * @param int $start
 * @param int $total
 * @param int $commentary_id
 * @param boolean $latest
 * @return array
 */
function get_cricket_live_blog_data($match_id, $limit = NULL) {
  if (!empty($match_id)) {
    $api_base_url = 'http://feeds.intoday.in/xml_it/commentary/';
    $match_commentary = file_get_contents($api_base_url . $match_id . '_ballbyball.json');

    if ($match_commentary) {
      $commentary = array();
      $match_commentary = json_decode($match_commentary);
      $innings = $match_commentary->Match->Innings;
      if (!is_array($innings)) {
        $innings = array($innings);
      }
      $innings = array_reverse($innings, TRUE);

      if (!is_array($innings)) {
        $innings = array($innings);
      }
      foreach ($innings as $key => $value) {
        $nodes = array();
        if (!empty($value->Node)) {
          $nodes = array_reverse($value->Node);
        }
        foreach ($nodes as $node_key => $node_value) {
          $commentary[] = $node_value;
        }
      }
      if (!empty($limit)) {
        $commentary = array_slice($commentary, 0, $limit);
      }
      return theme('cricket_live_blog_commentary', array('data' => $commentary));
    }
  }
}

/**
 * 
 * @param int $nid
 * @param int $page
 * @return boolean/array
 */
function get_commentary_data_db($nid, $page) {
  $data = FALSE;  
    if (isset($nid) && !empty($nid)) {
      $query = db_select('field_data_field_breaking_content_details', 'bcd');
      $query->addField('bt', 'field_breaking_tile_value', 'Commentary');
      $query->addExpression($page, 'innings');
      $query->leftJoin('field_data_field_breaking_tile', 'bt', '(bt.entity_id = bcd.field_breaking_content_details_value)');
      $query->isNotNull('bcd.field_breaking_content_details_value');
      $query->condition('bcd.entity_id', $nid, '=');
      $query->condition('bcd.bundle', 'breaking_news', '=');
      $query->condition('bcd.entity_type', 'node', '=');
      $query->condition('bt.bundle', 'field_breaking_content_details', '=');
      $query->condition('bt.entity_type', 'field_collection_item', '=');
      $query->range((20 * $page), 20);
      $query_result = $query->execute()->fetchAll();
      if (!empty($query_result) && count($query_result) > 0) {
        return theme('cricket_live_blog_commentary', array('data' => $query_result));
      }
    }
  return $data;
}

/**
 * Ajax form submit itg_breaking_form_ajax_submit().
 */
function itg_breaking_form_ajax_submit($form , &$form_state) {
  global $user;
  $error = 0;
  $blog_uid = $user->uid;
  $blog_type = 'live_blog';
  $action = ($form_state['input']['action']) ? $form_state['input']['action'] : '';
  $bid = $form_state['input']['bid'];
  $blog_title = $form_state['values']['blog_title'];
  $blog_description = replace_emoji($form_state['values']['blog_description']['value']);
  $blog_breaking_band = ($form_state['values']['blog_breaking_band']) ? $form_state['values']['blog_breaking_band'] : 1;
  $blog_notification = ($form_state['values']['blog_notification']) ? $form_state['values']['blog_notification'] : 1;
  $blog_publish_time = $form_state['values']['blog_publish_time'];
  $blog_highlight_status = $form_state['values']['blog_highlight_status'];
  $blog_entity_id = $form_state['values']['blog_entity_id'];
  $status = 1;
  $publish_time = !empty($blog_publish_time) ? $blog_publish_time : date('H:i');    
  $commands = array();
  
  if (empty($action)) {    
    if(!empty($blog_highlight_status) && empty($blog_title)) {
      $error = 1;
      $commands[] = ajax_command_replace('.inline-error-messages' , '<span class="inline-error-messages error">Title field is required.</span>');
    } elseif (empty($blog_title) && empty($blog_description)) {
      $error = 1;
      $commands[] = ajax_command_replace('.inline-error-messages' , '<span class="inline-error-messages error">Title or description any one field is required.</span>');     
    }
    
    if (!empty($error)) {
      drupal_get_messages();
      return array('#type' => 'ajax' , '#commands' => $commands);
    }
        
     $created = date('Y-m-d H:i:s');
      if (isset($bid) && $bid > 0) {
          $insert_id = db_update('itg_live_blog')
              ->fields(array(
                'blog_title' => $blog_title,
                'blog_description' => $blog_description,
                'blog_highlight_status' => $blog_highlight_status,
                'update_uid' => $blog_uid,
                'blog_updated_date' => $created,
              ))
              ->condition('bid', $bid, '=')
              ->execute();
        }
        else {
             
             $publish_time = date('H:i'); 
             $insert_id = db_insert('itg_live_blog')
              ->fields(array(
                'blog_entity_id' => $blog_entity_id,
                'blog_type' => $blog_type,
                'blog_title' => $blog_title,
                'blog_description' => $blog_description,
                'blog_breaking_band' => $blog_breaking_band,
                'blog_notification' => $blog_notification,
                'blog_publish_time' => $publish_time,
                'blog_highlight_status' => $blog_highlight_status,
                'blog_uid' => $blog_uid,
                'status' => $status,
                'blog_created_date' => $created,
              ))
              ->execute();
        }
             
      $blog_list = "<div id='live_data'>". itg_live_blog_list($blog_entity_id) . "</div>";
      $form['breaking']['blog_title']['#value'] = '';
      $form['breaking']['blog_highlight_status']['#checked'] = '';
      $form['breaking']['blog_description']['value']['#value'] = '';
      $form['breaking']['bid']['#value'] = '';
      $commands[] = ajax_command_replace('.inline-error-messages' , '<span class="inline-error-messages error"></span>');
      $commands[] = ajax_command_prepend(NULL, theme('status_messages')); // Messages output to a Drupal settings variable with registry alter
      $commands[] = ajax_command_replace("#blog_highlight_replace_wrapper", render($form['breaking']['blog_highlight_status']));
      $commands[] = ajax_command_replace("#blog_title_replace_wrapper", render($form['breaking']['blog_title']));
      $commands[] = ajax_command_replace("#blog_description_replace_wrapper", render($form['breaking']['blog_description']));
      // $commands[] = ajax_command_replace("#blog_publish_time_replace_wrapper", render($form['breaking']['blog_publish_time'])); 
      $commands[] = ajax_command_replace("#blog_bid_replace_wrapper", render($form['breaking']['bid'])); 
      $commands[] = ajax_command_replace('#live_data' , $blog_list);
    
  } else {
     $query = db_select('itg_live_blog', 'p');
     $query->fields('p', array('bid','blog_entity_id', 'blog_title', 'blog_description', 'blog_breaking_band', 'blog_notification','blog_uid','blog_highlight_status','blog_publish_time'));
     $query->condition('p.bid', $bid);
     $query->condition('p.status', 1);
     # execute the query
     $row = $query->execute()->fetchObject();
     $form['breaking']['blog_title']['#value'] = $row->blog_title;
     $form['breaking']['blog_description']['value']['#value'] = $row->blog_description;
     $form['breaking']['blog_breaking_band']['#value'] = $row->blog_breaking_band;
     $form['breaking']['blog_uid']['#value'] = $row->blog_uid;
     $form['breaking']['blog_publish_time']['#value'] = $row->blog_publish_time;
     $form['breaking']['blog_highlight_status']['#checked'] = !empty($row->blog_highlight_status) ? $row->blog_highlight_status : '';
     $form['breaking']['blog_entity_id']['#value'] = $row->blog_entity_id;
     $form['breaking']['bid']['#value'] = $row->bid;       
     $blog_form = "<div id='live_blog_form' class='table-bordered'>". drupal_render($form) . "</div>";
     $commands[] = ajax_command_invoke('#blog-loader-data', 'hide');
     $commands[] = ajax_command_replace('#live_blog_form', $blog_form);
  }
  
  $alias = drupal_get_path_alias('node/' . $blog_entity_id);
  $amp_alias = "amp/" . $alias;
  if ($alias) {
    itg_akamai_clear_url($alias);
    itg_akamai_clear_url($amp_alias);
  } 
    
  return array('#type' => 'ajax', '#commands' => $commands);  
}

