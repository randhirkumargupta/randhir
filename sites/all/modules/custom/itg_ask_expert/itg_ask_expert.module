  $form['#prefix'] = '<div id="expert_global_config">';
  $form['#suffix'] = '</div>';
  
  $form['question'] = array(
    '#type' => 'textarea', //you can find a list of available types in the form api
    '#title' => t(''),
    '#prefix' => '<div id="question">',
    '#suffix' => '</div>',
    '#maxlength' => 160,
    '#attributes' => array(
      'placeholder' => 'Ask your question here',
    ),
