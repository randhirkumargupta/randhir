  $form['cat_id'] = array(
    '#type' => 'textfield', //you can find a list of available types in the form api
    '#title' => t(''),
    '#value' => '147',
  );

  $form['submit_button'] = array(
    '#type' => 'submit',
    '#value' => t('Submit'),
    '#ajax' => array(
      'wrapper' => 'expert_global_config',
      'callback' => 'expert_form_ajax_handler',
