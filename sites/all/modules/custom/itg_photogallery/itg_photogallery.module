/**
 * Implements function for get uri by fid
 */
function _itg_photogallery_fid($fid) {
  $query = db_select('file_managed', 'fm');
  $query->fields('fm', array('uri'));
  $query->condition('fid', $fid, '=');
  $result = $query->execute()->fetchField();
  return $result;
}

/**
