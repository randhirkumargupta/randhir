 */
function itg_widget_delete_big_story_live_tv() {
  try {
    $number_deleted = db_delete('itg_widget_order')
        ->condition('widget', 'big_story_format_widget')
        ->condition('extra', 'big_story_live_tv_active')
        ->execute();
    if ($number_deleted) {
