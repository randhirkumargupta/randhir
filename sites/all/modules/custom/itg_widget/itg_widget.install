<?php

/**
 * @file
 * Install, update and uninstall functions for the ITG image cropingmodule.
 */

/**
 * Implementation of hook_schema
 * 
 * @access public
 * @return array
 */
function itg_widget_schema() {
    $schema = array();
    $schema['itg_widget_order'] = array(
        'description' => 'Table to save custom order of nodes',
        'fields' => array(
            'nid' => array(
                'description' => 'node id',
                'type' => 'int',
                'not null' => FALSE,
            ),
            'cat_id' => array(
                'description' => 'catgegory tid',
                'type' => 'int',
                'not null' => FALSE,
            ),
            'content_type' => array(
                'description' => 'content type',
                'type' => 'varchar',
                'length' => '100',
                'not null' => FALSE,
            ),
            'widget' => array(
                'description' => 'widget name',
                'type' => 'varchar',
                'length' => '100',
                'not null' => TRUE,
            ),
            'weight' => array(
                'description' => 'weight',
                'type' => 'int',
                'not null' => FALSE,
                'default' => 0,
            ),
            'created' => array(
                'description' => 'updated date',
                'type' => 'timestamp',
                'not null' => TRUE,
                'default' => 'CURRENT_TIMESTAMP',
            ),
            'extra' => array(
                'description' => 'Extra content if required',
                'type' => 'varchar',
                'length' => '255',
                'not null' => FALSE,
            ),
        ),
    );

    return $schema;
}

/**
 * Implements hook_uninstall().
 */
function itg_widget_uninstall() {
    drupal_uninstall_schema('itg_widget_order');
}

/**
 * Clear menu cache to match new configuration place
 */
function itg_widget_update_7001() {
    cache_clear_all(NULL, 'cache_menu');
}
