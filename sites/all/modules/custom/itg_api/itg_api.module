/**
* Implements hook_feeds_presave().
*/
function itg_api_node_presave($node) {
  global $user;
  // get bad words list in array
  $vocab_id = taxonomy_vocabulary_machine_name_load('bad_words');
  $tax = taxonomy_get_tree($vocab_id->vid, $parent = 0, $max_depth = 1, $load_entities = FALSE);

  foreach ($tax as $key => $val) {
    $op[$val->tid] = $val->name;
  }

//  $node = node_load(373);
//  $node_body = trim($node->body[LANGUAGE_NONE][0]['value']);
//  $node_body = strip_tags($node_body);
//  $node_body = explode(',',$node_body);

  if ($node->type == 'story' && $node->feeds_item->id == 'pti') {

    // calculate length of xml title
    $title_length = strlen($node->title);

    // get byline reporter id
    $author = $node->field_story_reporter[LANGUAGE_NONE][0]['target_id'];

    if (!empty($author)) {

      $author = $author;
    }
    else {
      $author = 'PTI';
    }


    // get category 
    $pti_category = $node->field_story_category[LANGUAGE_NONE][0]['tid'];

    if (!empty($pti_category)) {

      $pti_category = $pti_category;
    }
    else {

      $pti_category = itg_api_get_term_id('PTI');
    }

    // get publish date 
    $pubdate = $node->field_story_schedule_date_time[LANGUAGE_NONE][0]['value'];

    // expiry date 
    $exp_date = strtotime('+90 years', strtotime($pubdate));
    $exp_date = date('Y-m-d', $exp_date);

    // get description value
    $description = $node->body[LANGUAGE_NONE][0]['value'];
    // strip html tags
    $description = strip_tags($description);
    $description = trim($description);
    $kicker = substr($description, 0, 200);
    $kicker = strip_tags($kicker);
    $kicker = trim($kicker);
    $kicker1 = substr($description, 200);
    $kicker1 = strip_tags($kicker1);
    $pre_final_kicker = preg_split('/(?<!\d)\.(?!\d)/', $kicker1);
    $final_kicker = $kicker.' '.$pre_final_kicker[0];
    $final_kicker = str_replace(array('\'', '"'), '', $final_kicker);
    $final_kicker = substr($final_kicker, 0, 252);
    $final_kicker = $final_kicker.'..';
    $final_kicker = trim(preg_replace('/[\s\t\n\r\s]+/', ' ', $final_kicker));
    

    // get byline id based on name 
    $by_line = itg_api_get_nid($author, 'reporter');

    // asign value to schedule date field
    $node->uid = $user->uid;
    $node->comment = 0;
    $node->field_story_schedule_date_time[LANGUAGE_NONE][0]['value'] = $pubdate;
    $node->field_story_expiry_date[LANGUAGE_NONE][0]['value'] = $exp_date;
    $node->field_story_long_head_line[LANGUAGE_NONE][0]['value'] = trim($node->title);
    $node->field_story_magazine_kicker_text[LANGUAGE_NONE][0]['value'] = $final_kicker;
    $node->field_story_reporter[LANGUAGE_NONE][0]['value'] = $byline;
    $node->field_story_short_headline[LANGUAGE_NONE][0]['value'] = trim($node->title);
    //$node->field_story_comment_question[LANGUAGE_NONE][0]['value'] = 'NA';
    $node->field_story_source_type[LANGUAGE_NONE][0]['value'] = 'PTI';
    $node->field_story_category[LANGUAGE_NONE][0]['tid'] = $pti_category;
    // convert string to array
    $exp_description = strtolower($description);
    $exp_description = explode(" ", $exp_description);

    if (array_intersect($op, $exp_description)) {
      $node->log = 'State Changed to Review';
      $node->workbench_moderation_state_new = workbench_moderation_state_Review();
    }
    else {
      if ($title_length > 35) {
        $node->log = 'State Changed to published';
        $node->workbench_moderation_state_new = workbench_moderation_state_published();
      }

      if ($title_length < 35) {
        $node->log = 'State Changed to Review';
        $node->workbench_moderation_state_new = workbench_moderation_state_Review();
      }
    }
  }
}

/**
 * Returns the key which represents the live revision.
