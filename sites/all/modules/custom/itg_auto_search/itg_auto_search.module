/**
 * hook_block_view()
 * {@inheritdoc}
 */
function itg_auto_search_block_view($delta = '') {
  global $user;
  $block = array();
  switch ($delta) {
    // Auto Master Compare widget case
    case 'auto_master_compare_widget':
      $info['widget'] = 'auto_master_compare_widget';
      $arg = arg();
      $query_string = $arg[3];
      if ($arg[1] == 'compare' && !empty($query_string)) {
        $auto_model = explode('vs', $query_string);
        $auto1 = get_data_from_autoindia(array('id' => $auto_model[0]));
        $auto2 = NULL;
        if (isset($auto_model[1])) {
          $auto2 = get_data_from_autoindia(array('id' => $auto_model[1]));
          foreach ($auto2[0] as $key => $value) {
            if (is_null($value) || $value == 'NULL') {
              $auto2[0]->$key = "&nbsp;";
            }
          }
        }
        foreach ($auto1[0] as $key => $value) {
          if (empty($value) || $value == 'NULL') {
            $auto1[0]->$key = "&nbsp;";
          }
        }
        $data = array(
          'first' => $auto1,
          'second' => $auto2
        );

        $block['content'] = theme("auto_compare_theme", array("data" => $data));
      }
      else {
        $block['content'] = '';
      }
      break;
  }
  return $block;
}

