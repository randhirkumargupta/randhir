/**
 * This function used to get data from itg_autotoday table
 * {@inheritdoc}
 * @param array $condition_data
 * @param array $fields
 * @return array
 * 
 * $condition_data : array contains fields for condition
 * @$fields : array contains fields for select fields
 */
function get_data_from_autoindia($condition_data = array(), $fields = array(), $flag = FALSE) {
  $auto_brand = db_select('itg_autotoday', 'at');
  if (count($fields) < 0) {
    $auto_brand->fields('at');
  }
  else {
    $auto_brand->fields('at', $fields);
  }
  $like = '';
  if ($flag) {
    $like = '%';
  }
  $auto_brand->orderBy('at.brand', 'ASC');
  foreach ($condition_data as $key => $value) {
    $auto_brand->condition(trim($key), $like . db_like(trim($value)) . $like, 'LIKE');
  }
  $return = $auto_brand->execute()->fetchAll();
  return $return;
}

/**
 * This function use to generate compare slug and redirect to generated url.
 * {@inheritdoc}
 * @param array $form
 * @param array $form_state
 * 
 */
function auto_master_form_submit($form, &$form_state) {
  $url = '';
  $ids = NULL;

  if (!empty($form_state['values']['auto_model'])) {
    $model = get_data_from_autoindia(array('id' => $form_state['values']['auto_model']), array('vehicle'));
    $id = $form_state['values']['auto_model'];
    if (!empty($id)) {
      $ids = trim($id);
    }
    $url .= '' . get_slug($model[0]->vehicle);
  }

  if (!empty($form_state['values']['auto_model_2'])) {
    if (empty($form_state['values']['auto_model'])) {
      $id = $form_state['values']['auto_model_2'];
      $model_2 = get_data_from_autoindia(array('id' => $form_state['values']['auto_model_2']), array('vehicle'));
      if (!empty($id)) {
        $ids = trim($id);
      }
      $url .= '' . get_slug($model_2[0]->vehicle);
    }
    else {
      $model_2 = get_data_from_autoindia(array('id' => $form_state['values']['auto_model_2']), array('vehicle'));
      $id = $form_state['values']['auto_model_2'];
      if (!empty($id)) {
        $ids .= 'vs' . trim($id);
      }
      $url .= '-vs-' . get_slug($model_2[0]->vehicle);
    }
  }

  $form_state['redirect'] = array(
    'auto/compare/' . $url . '/' . $ids
  );
}

/**
 * This function use to generate slug from string.
 * {@inheritdoc}
 * @param string $str
 * @param string $delimiter
 * @return string generated slug
 * 
 */
function get_slug($str, $delimiter = '-') {
  $slug = strtolower(trim(preg_replace('/[\s-]+/', $delimiter, preg_replace('/[^A-Za-z0-9-()]+/', $delimiter, preg_replace('/[&]/', 'and', preg_replace('/[\']/', '', iconv('UTF-8', 'ASCII//TRANSLIT', $str))))), $delimiter));
  return $slug;
}
