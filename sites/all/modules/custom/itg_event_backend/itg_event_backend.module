/**
 * Get host node
 * @param string $host
 * @return object
 */
function itg_event_backend_get_host_node($host) {
    $query = db_select('node', 'n')
            ->fields('n', array('nid'))
            ->condition('n.title', $host, '=');

    return node_load($query->execute()->fetchField());
}

/**
 * Insert into redirect and domain table 
 * @global object $user
 * @param object $node
 */
function itg_event_backend_insert_into_redirect($node) {

    global $user;
    $domain = itg_event_backend_get_domain($node->domains);

    if ($domain) {
        $path = 'http://' . $domain;

        // Prepare for redirect table
        $redirect = new stdClass();
        redirect_object_prepare($redirect);
        $redirect->source = 'node/' . $node->nid;
        $redirect->redirect = $path;
        $redirect->language = 'und';
        $hash = redirect_hash($redirect);
        $redirect->hash = $hash;
        $redirect->uid = $user->uid;
        $redirect->type = 'redirect';
        $redirect->access = time();
        $redirect->count = 1;
        $redirect->status = 1;

        // Prepare for domain source table
        $domain_source = new stdClass();
        redirect_object_prepare($domain_source);
        $domain_source->nid = $node->nid;
        $domain_source->domain_id = '-' . $node->domains;

        $existing = redirect_load_by_hash($hash);
        if (!$existing) {
            drupal_write_record('redirect', $redirect);
            drupal_write_record('domain_source', $domain_source);
        }
    }
}
