 */
function itg_event_backend_get_event_node() {
    global $base_url;
    $query = db_select('redirect', 'red');
    $query->fields('red', array('source'));
    $query->condition('redirect', $base_url, '=');
    $result = $query->execute()->fetchField();
    $event_id = explode('node/', $result);
    return $event_id[1];
