 * @return boolean
 */
function itg_event_get_host_name() {
    if (module_exists('domain')) {
        $query = db_select('domain', 'd');
        $query->fields('d', array('subdomain', 'scheme'));
        $query->condition('domain_id', 1, '=');
        $result = $query->execute()->fetchAssoc();
        return $result['scheme'] . '://' . $result['subdomain'];
    }
}

/**
