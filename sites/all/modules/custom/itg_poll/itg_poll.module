    return array('#type' => 'ajax', '#commands' => $commands);
  }
  global $user;

  // Get display result
  $dsp_result = itg_poll_get_display_result($node_id);
  $created = date('Y-m-d H:i:s');

  try {
    db_insert('itg_polls')->fields(array(
        'nId' => $node_id,
        'ansId' => $pole_answer,
        'uId' => $user->uid,
        'display_result' => $dsp_result,
        'created' => $created))->execute();
  } catch (Exception $e) {
    watchdog('Error while entry in itg_polls', $e->getMessage());
  }


  $expire = time() + 60 * 60 * 24 * 30; // expires in one month
  $value = 'yes_' . $node_id;
  setcookie('visitedPoll', $value, $expire, '/');
  $_SESSION['first_submit_anomoyous'] = 'yes';
  $poll_answer = itg_poll_get_past_data($node_id);
  $commands[] = ajax_command_html('.poll-replace-id', $poll_answer);
  return array('#type' => 'ajax', '#commands' => $commands);
