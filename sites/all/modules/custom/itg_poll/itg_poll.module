  if(itg_workflow_stop_node_update_batch_for_widgets()) {
    return;
  }
  if ($node->field_story_source_type[LANGUAGE_NONE][0]['value'] != 'migrated') {
    if ($node->type == 'story') {
      poll_count_of_content($node->body['und'][0]['value'], $node, 'update');
    }
  }
}

/**
 * save content id with poll in custom table
 * @param string $desc
 * @param array $node
 * @return //2464
 */
function poll_count_of_content($desc, $node, $action) {
  if ($action == 'update') {
    //row delete
    db_delete('itg_poll_count_content')->condition('content_id', $node->nid)->execute();
  }

  if (strpos($desc, '[ITG:POLL:')) {
    if (preg_match_all('/ITG:POLL:([0-9]+)/', $desc, $matches_poll)) {

      $poll_nid = $matches_poll[1];

      if (isset($poll_nid)) {
        //row insert
        foreach ($poll_nid as $key => $val) {
          $query = db_insert('itg_poll_count_content');
          $query->fields(array(
              'content_id' => $node->nid,
              'poll_id' => $val,
              'content_type' => $node->type,
          ));
          $query->execute();
        }
      }
    }
  }
}

/**
 * Added a Query tag as  "manage_poll_query_tag" in Manage Poll used in View : [poll_listing] and written query tag alter as required
 * Implements hook_query_TAG_alter()
 */
function itg_poll_query_manage_poll_query_tag_alter(QueryAlterableInterface $query) {
  $cur_date = date('Y-m-d H:i:s');
  if (isset($_GET['poll_status']) && !empty($_GET['poll_status']) && $_GET['poll_status'] == 'inactive') {
    $query->leftJoin('field_data_field_poll_end_date', 'o', 'node.nid = o.entity_id');
    $or = db_or();
    $db_and = db_and();
    $db_and->isNotNull('o.field_poll_end_date_value');
    $db_and->condition('o.field_poll_end_date_value', $cur_date, '<');
    $or->condition($db_and);
    $query->condition($or);
  }

  if (isset($_GET['poll_status']) && !empty($_GET['poll_status']) && $_GET['poll_status'] == 'active') {
    $query->leftjoin('field_data_field_poll_start_date', 'sd', 'node.nid = sd.entity_id');
    $query->leftjoin('field_data_field_poll_end_date', 'ed', 'node.nid = ed.entity_id');
    $query->condition('sd.field_poll_start_date_value', $cur_date, '<=');
    $query->condition(db_or()->isNull('ed.field_poll_end_date_value')->condition('ed.field_poll_end_date_value', $cur_date, '>='));
  }
}

