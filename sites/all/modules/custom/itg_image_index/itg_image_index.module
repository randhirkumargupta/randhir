<?php

/**
 * @file
 * The ITG Image Search module.
 *
 * Contains functionality related to Image Searching.
 *
 */

/**
 * Implements apachesolr_image_apachesolr_index_document_build().
 * {@inheritdoc}
 */
function apachesolr_image_apachesolr_index_document_build($document, $node, $namespace) {

// index orignal image urls

    if (isset($node->status) && !empty($node->status)) {
        $document->addField('sm_field_node_status', $node->status);
    }
    
    if (isset($node->nid)) {
        $document->addField('sm_itg_custom_nid', $node->nid);
    }
    
    if (isset($node->field_story_extra_large_image['und']['0']['alt'])) {
      if(!empty($node->field_story_extra_large_image['und']['0']['alt'])) {
        $document->addField('sm_alttext', $node->field_story_extra_large_image['und']['0']['alt']);
      }
      if(!empty($node->field_story_extra_large_image['und']['0']['title'])) {
        $document->addField('sm_image_title', $node->field_story_extra_large_image['und']['0']['title']);
       }
     }
    
    if ($node->type == 'story' && !empty($node->field_story_kicker_text['und']['0']['value'])) {
        $document->addField('sm_common_kicker_text', $node->field_story_kicker_text['und']['0']['value']);
    }
    
    if ($node->type == 'videogallery' && !empty($node->field_story_expert_description['und']['0']['value'])) {
        $document->addField('sm_common_kicker_text', $node->field_story_expert_description['und']['0']['value']);
    }
    
    if ($node->type == 'podcast' && !empty($node->field_podcast_kicker_message['und']['0']['value'])) {
        $document->addField('sm_common_kicker_text', $node->field_podcast_kicker_message['und']['0']['value']);
    }

    if ($node->type == 'story') {
      if(!empty($node->field_story_expert_description['und']['0']['value'])) {
        $document->addField('sm_field_custom_expert_description', $node->field_story_expert_description['und']['0']['value']);
      }
      if(!empty($node->field_map_embed_code['und']['0']['value'])) {
        $document->addField('sm_field_map_embed_code', $node->field_map_embed_code['und']['0']['value']);
      }
      if(!empty($node->field_social_embed_code['und']['0']['value'])) {
        $document->addField('sm_field_social_embed_code', $node->field_social_embed_code['und']['0']['value']);
      }
    }

    if (isset($node->type) && $node->type == 'story') {
      /*if($node->field_story_source_type[LANGUAGE_NONE][0]['value'] == 'migrated') {
        $itg_body = apachesolr_clean_text($node->body[$node->language][0]['value']);
      } else {
        $itg_body = $node->body[$node->language][0]['value'];
      }*/
        $itg_body = $node->body[$node->language][0]['value'];
        if($node->field_story_source_type[LANGUAGE_NONE][0]['value'] != 'migrated') {
          $document->addField('sm_field_custom_story_description_text', $itg_body);
        }
        $document->addField('sm_field_custom_emoji', $node->field_emoji['und']['0']['value']);
        $document->addField('sm_field_custom_emoji_2', $node->field_emoji_2['und']['0']['value']);
        
    }
     if (isset($node->type) && $node->type == 'itg_solr_video') {
        //$itg_body = apachesolr_clean_text($node->body[$node->language][0]['value']);
        $document->addField('sm_field_all_xml_content', $node->field_all_xml_content['und']['0']['value']); 
    }
    $type = array('story', 'photogallery', 'videogallery');
    if (isset($node->type) && in_array($node->type, $type)) {
      if (!empty($node->field_story_extra_large_image['und']['0']['uri'])) {
        $extra_large_image_url = file_create_url($node->field_story_extra_large_image['und']['0']['uri']);
        $document->addField('sm_field_custom_story_extra_large_url', $extra_large_image_url);
     }
     
     if (isset($node->field_story_extra_large_image['und']['0']['fid']) && !empty($node->field_story_extra_large_image['und']['0']['fid'])) {
      if(function_exists('itg_image_croping_get_orignal_image_url_fid')) {
        $image_url = itg_image_croping_get_orignal_image_url_fid($node->field_story_extra_large_image['und']['0']['fid']);
        if(!empty($image_url)) {
          $document->addField('sm_original_image_url', $image_url);
        }
      }  
    }
     if (isset($node->field_story_large_image['und']['0']['fid']) && !empty($node->field_story_large_image['und']['0']['fid'])) {
      if(function_exists('itg_image_croping_get_orignal_image_url_fid')) {
        $image_url = itg_image_croping_get_orignal_image_url_fid($node->field_story_large_image['und']['0']['fid']);
        if(!empty($image_url)) {
          $document->addField('sm_original_image_url', $image_url);
        }
      }  
    }
    if (isset($node->field_story_medium_image['und']['0']['fid']) && !empty($node->field_story_medium_image['und']['0']['fid'])) {
      if(function_exists('itg_image_croping_get_orignal_image_url_fid')) {
        $image_url = itg_image_croping_get_orignal_image_url_fid($node->field_story_medium_image['und']['0']['fid']);
        if(!empty($image_url)) {
          $document->addField('sm_original_image_url', $image_url);
        }
      }  
    }
    if (isset($node->field_story_small_image['und']['0']['fid']) && !empty($node->field_story_small_image['und']['0']['fid'])) {
      if(function_exists('itg_image_croping_get_orignal_image_url_fid')) {
        $image_url = itg_image_croping_get_orignal_image_url_fid($node->field_story_small_image['und']['0']['fid']);
        if(!empty($image_url)) {
          $document->addField('sm_original_image_url', $image_url);
        }
      }  
    }
    if (isset($node->field_story_extra_small_image['und']['0']['fid']) && !empty($node->field_story_extra_small_image['und']['0']['fid'])) {
      if(function_exists('itg_image_croping_get_orignal_image_url_fid')) {
        $image_url = itg_image_croping_get_orignal_image_url_fid($node->field_story_extra_small_image['und']['0']['fid']);
        if(!empty($image_url)) {
          $document->addField('sm_original_image_url', $image_url);
        }
      }  
    }
     if (!empty($node->field_story_large_image['und']['0']['uri'])) {
        $large_image_url = file_create_url($node->field_story_large_image['und']['0']['uri']);
        $document->addField('sm_field_custom_story_large_url', $large_image_url);
     }
     if (!empty($node->field_story_medium_image['und']['0']['uri'])) {
        $medium_image_url = file_create_url($node->field_story_medium_image['und']['0']['uri']);
        $document->addField('sm_field_custom_story_medium_large_url', $medium_image_url);
     }
     if (!empty($node->field_story_small_image['und']['0']['uri'])) {
        $small_image_url = file_create_url($node->field_story_small_image['und']['0']['uri']);
        $document->addField('sm_field_custom_story_small_large_url', $small_image_url);
     }
     if (!empty($node->field_story_extra_small_image['und']['0']['uri'])) {
        $extra_small_image_url = file_create_url($node->field_story_extra_small_image['und']['0']['uri']);
        $document->addField('sm_field_custom_story_extra_small_url', $extra_small_image_url);
     }
     if (!empty($node->field_story_magazine_story_issue['und']['0']['value'])) {
        $document->addField('sm_field_custom_issue_based', 'issue_based');
     } else {
       $document->addField('sm_field_custom_issue_based', 'non_issue_based');
     }
     
    }
    
    if(isset($node->type) && $node->type == 'magazine') {
     if (!empty($node->field_magazine_cover_photo['und']['0']['uri'])) {
        $magazine_image_url = file_create_url($node->field_magazine_cover_photo['und']['0']['uri']);
       $document->addField('sm_field_magazine_small_url', $magazine_image_url);
     } 
    }
  
    if (isset($node->field_story_extra_small_image['und']['0']['alt'])) {
      if(!empty($node->field_story_extra_small_image['und']['0']['alt'])) {
        $document->addField('sm_alttext', $node->field_story_extra_small_image['und']['0']['alt']);
      }
      if(!empty($node->field_story_extra_small_image['und']['0']['title'])) {
        $document->addField('sm_image_title', trim($node->field_story_extra_small_image['und']['0']['title']));
      }
    }
    if (isset($node->field_story_large_image['und']['0']['alt'])) {
      if(!empty($node->field_story_large_image['und']['0']['alt'])) {
        $document->addField('sm_alttext', $node->field_story_large_image['und']['0']['alt']);
      }
      if(!empty($node->field_story_large_image['und']['0']['title'])) {
        $document->addField('sm_image_title', trim($node->field_story_large_image['und']['0']['title']));
      }
    }
    if (isset($node->field_story_small_image['und']['0']['alt'])) {
      if(!empty($node->field_story_small_image['und']['0']['alt'])) {
        $document->addField('sm_alttext', $node->field_story_small_image['und']['0']['alt']);
      }
      if(!empty($node->field_story_small_image['und']['0']['title'])) {
        $document->addField('sm_image_title', trim($node->field_story_small_image['und']['0']['title']));
      }
    }
    if (isset($node->field_story_medium_image['und']['0']['alt'])) {
      if(!empty($node->field_story_medium_image['und']['0']['alt'])) {
        $document->addField('sm_alttext', $node->field_story_medium_image['und']['0']['alt']);
      }
      if(!empty($node->field_story_medium_image['und']['0']['title'])) {
        $document->addField('sm_image_title', trim($node->field_story_medium_image['und']['0']['title']));
      }
    }
    
    if (!empty($node->field_gallery_image['und']) && $node->type == 'photogallery') {
    foreach ($node->field_gallery_image['und'] as $key => $fieldval) {
      $fieldata = entity_load('field_collection_item', array($fieldval['value']));
      
      if (isset($fieldata[$fieldval['value']]->field_images['und'][0]['fid']) && !empty($fieldata[$fieldval['value']]->field_images['und'][0]['fid'])) {
       if(function_exists('itg_image_croping_get_orignal_image_url_fid')) {
        $image_url = itg_image_croping_get_orignal_image_url_fid($fieldata[$fieldval['value']]->field_images['und'][0]['fid']);
        if(!empty($image_url)) {
          $document->addField('sm_original_image_url', $image_url);
        }
      }  
    }
    if (isset($fieldata[$fieldval['value']]->field_images['und'][0]['fid']) && !empty($fieldata[$fieldval['value']]->field_photo_small_image['und'][0]['fid'])) {
       if(function_exists('itg_image_croping_get_orignal_image_url_fid')) {
        $image_url = itg_image_croping_get_orignal_image_url_fid($fieldata[$fieldval['value']]->field_photo_small_image['und'][0]['fid']);
        if(!empty($image_url)) {
          $document->addField('sm_original_image_url', $image_url);
        }
      }  
    }
      if (!empty($fieldata[$fieldval['value']]->field_images['und'][0]['alt'])) {
        $document->addField('sm_alttext', $fieldata[$fieldval['value']]->field_images['und'][0]['alt']);
      }
      if (!empty($fieldata[$fieldval['value']]->field_image_caption['und'][0]['value'])) {
        if ($node->field_story_source_type[LANGUAGE_NONE][0]['value'] == 'migrated') {
          $result = preg_replace("/[^a-zA-Z0-9]+/", "", $fieldata[$fieldval['value']]->field_image_caption['und'][0]['value']);
          $small = substr($result, 0, 500);
          $document->addField('sm_image_title', strip_tags($small));
        }
        else {
          $document->addField('sm_image_title', strip_tags($fieldata[$fieldval['value']]->field_image_caption['und'][0]['value']));
        }
      }

      if (!empty($fieldata[$fieldval['value']]->field_photo_small_image['und'][0]['alt'])) {
        $document->addField('sm_alttext', $fieldata[$fieldval['value']]->field_photo_small_image['und'][0]['alt']);
      }
      if (!empty($fieldata[$fieldval['value']]->field_photo_small_image['und'][0]['title'])) {
        $document->addField('sm_image_title', trim($fieldata[$fieldval['value']]->field_photo_small_image['und'][0]['title']));
      }
      
    }
  }

    $common_byline = $node->field_itg_common_by_line_name['und']['0']['value'];
    $common_twitter = $node->field_itg_common_by_line_twitter['und']['0']['value'];
    $common_reporter = $node->field_common_by_line_reporter_id['und']['0']['value'];

    if (isset($node->field_itg_common_by_line_name['und']['0']['value'])) {
        $story_common = explode(',', trim($common_byline));
        foreach ($story_common as $story_common_val) {
            $document->addField('sm_field_itg_common_by_line_name', $story_common_val);
        }
    }

    if (isset($node->field_itg_common_by_line_twitter['und']['0']['value'])) {
        $story_twit = explode(',', trim($common_twitter));
        foreach ($story_twit as $story_twit_val) {
            $document->addField('sm_field_itg_common_by_line_twit', $story_twit_val);
        }
    }

    if (isset($node->field_common_by_line_reporter_id['und']['0']['value'])) {
        $story_common_rep = explode(',', trim($common_reporter));
        foreach ($story_common_rep as $story_common_rep_val) {
            $document->addField('sm_field_common_by_line_reporter', $story_common_rep_val);
        }
    }
}
