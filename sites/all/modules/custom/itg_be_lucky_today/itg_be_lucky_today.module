//    var_dump($js);die;
    if ($js) {
        ctools_include('modal');
        ctools_include('ajax');
        $title = t('Be lucky today');
        $build = array(
          '#prefix' => '<strong>',
          '#suffix' => '<strong>',
          '#markup' => t('Terms and condition'),
        );
        return ctools_modal_render($title, $build);
    }
    else {
        $output = 'Terms and Condiction content1';
        return $output;
    }
}

