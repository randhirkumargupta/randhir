function itg_sso_reg_init() {
  
  global $user;
  
  $settings['uid'] = $user->uid ? $user->uid : 0;
  drupal_add_js(array('itg_popup' => array('settings' => $settings)), array('type' => 'setting'));
  drupal_add_js(drupal_get_path('module', 'itg_sso_reg') . '/js/itg_popup.js');
}


